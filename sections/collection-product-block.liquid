                       src="{{ product.featured_image | img_url: '600x' }}" 
                       alt="{{ product.title }}"
                       loading="lazy">
                  
                  {% if block.settings.show_second_image and product.images[1] %}
                    <img class="product-image secondary" 
                         src="{{ product.images[1] | img_url: '600x' }}" 
                         alt="{{ product.title }}"
                         loading="lazy">
                  {% endif %}
                {% else %}
                  <div class="product-image primary" style="background: #e0e0e0;"></div>
                {% endif %}
                
                {% if block.settings.show_new_badge %}
