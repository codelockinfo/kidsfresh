  /* Show secondary image on hover only if it exists */
  .product-card:hover .product-image.secondary {
    opacity: 1;
  }

  /* Hide primary image on hover only if secondary image exists */
  .product-card:hover .product-image-wrapper:not(.no-second-image) .product-image.primary {
    opacity: 0;
  }

  /* Zoom effect when no second image exists - keep primary visible and zoom */
  .product-image-wrapper.no-second-image .product-image.primary {
    transition: transform 0.5s ease;
    opacity: 1 !important;
  }

  .product-image-wrapper.no-second-image:hover .product-image.primary {
    transform: scale(1.1);
    opacity: 1 !important;
