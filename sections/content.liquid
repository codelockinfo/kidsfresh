{% schema %}
{
  "name": "Custom Text Blocks",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4f0de"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 24
    },
    {
      "type": "range",
      "id": "paragraph_size",
      "label": "Paragraph Font Size",
      "min": 12,
      "max": 28,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "default": "left",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Center", "value": "center" },
        { "label": "Right", "value": "right" }
      ]
    }
  ],

  "blocks": [
    {
      "type": "text_block",
      "name": "Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Custom Text Blocks"
    }
  ]
}
{% endschema %}
<section 
  class="custom-text-section"
  style="
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    text-align: {{ section.settings.text_align }};
">
  <div class="policy_container">
  <div>
      <div class="center_part">
        {% for block in section.blocks %}
      <div class="text-block" style="margin-bottom: 40px;">
        
        {% if block.settings.heading != blank %}
          <h2 style="font-size: {{ section.settings.heading_size }}px; margin-bottom: 10px;">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.paragraph != blank %}
          <p style="font-size: {{ section.settings.paragraph_size }}px; line-height: 1.6;">
            {{ block.settings.paragraph }}
          </p>
        {% endif %}

      </div>
    {% endfor %}
    </div>
  </div>
    
  </div>
</section>
<style>
    .policy_container{
        max-width: 1900px;
        padding: 0px 300px;
    }
    .custom-text-section {
  padding: 40px 0px;
}
</style>
