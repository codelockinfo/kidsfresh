{% stylesheet %}
  .food-love-section {
    background: {{ section.settings.bg_color | default: '#f5f5dc' }};
    padding: 80px 40px;
    position: relative;
    overflow: hidden;
  }

  .food-love-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .food-love-heading {
    font-size: 84px;
    font-weight: 900;
    color: {{ section.settings.heading_color | default: '#5D3328' }};
    text-align: center;
    margin-bottom: 30px;
    margin-top: 0;
    line-height: 1.2;
    text-transform: lowercase;
  }

  .food-love-description {
    font-size: 28px;
    color: {{ section.settings.text_color | default: '#5D3328' }};
    text-align: center;
    max-width: 900px;
    margin: 0 auto 60px;
    line-height: 1.6;
  }

  /* Decorative Peanut/Bean Elements */
  .food-love-decorative {
    position: absolute;
    width: 60px;
    height: auto;
    opacity: 0.8;
    z-index: 1;
  }

  .food-love-decorative.decor-1 {
    left: 10%;
    top: 10%;
    transform: rotate(-15deg);
  }

  .food-love-decorative.decor-2 {
    left: 8%;
    top: 20%;
    transform: rotate(10deg);
  }

  .food-love-decorative.decor-3 {
    right: 12%;
    top: 12%;
    transform: rotate(-20deg);
  }

  .food-love-decorative.decor-4 {
    left: 15%;
    bottom: 35%;
    transform: rotate(15deg);
  }

  .food-love-decorative.decor-5 {
    right: 10%;
    bottom: 30%;
    transform: rotate(-10deg);
  }

  /* Feature Blocks */
  .food-love-features {
    display: flex;
    gap: 30px;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 60px;
  }

  .food-love-feature {
    flex: 1;
    min-width: 280px;
    max-width: 350px;
    background: {{ section.settings.feature_bg_color | default: '#f5f5dc' }};
    padding: 40px 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .food-love-feature-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .food-love-feature-icon img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .food-love-feature-title {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.feature_title_color | default: '#F58220' }};
    margin-bottom: 15px;
    text-transform: lowercase;
  }

  .food-love-feature-description {
    font-size: 18px;
    color: {{ section.settings.feature_text_color | default: '#5D3328' }};
    line-height: 1.5;
  }

  /* Responsive Styles */
  @media (max-width: 968px) {
    .food-love-section {
      padding: 60px 20px;
    }

    .food-love-heading {
      font-size: 64px;
    }

    .food-love-description {
      font-size: 22px;
      margin-bottom: 40px;
    }

    .food-love-features {
      gap: 20px;
      margin-top: 40px;
    }

    .food-love-feature {
      min-width: 100%;
      max-width: 100%;
    }

    .food-love-decorative {
      width: 40px;
      opacity: 0.5;
    }
  }

  @media (max-width: 640px) {
    .food-love-heading {
      font-size: 48px;
      margin-bottom: 20px;
    }

    .food-love-description {
      font-size: 18px;
      margin-bottom: 30px;
    }

    .food-love-feature {
      padding: 30px 20px;
    }

    .food-love-feature-title {
      font-size: 20px;
    }

    .food-love-feature-description {
      font-size: 16px;
    }
  }
{% endstylesheet %}

<section class="food-love-section" id="food-love-{{ section.id }}">
  <!-- Decorative Elements -->
  {% if section.settings.decorative_image_1 %}
    <img src="{{ section.settings.decorative_image_1 | image_url }}" 
         class="food-love-decorative decor-1" alt="Decorative element">
  {% endif %}
  {% if section.settings.decorative_image_2 %}
    <img src="{{ section.settings.decorative_image_2 | image_url }}" 
         class="food-love-decorative decor-2" alt="Decorative element">
  {% endif %}
  {% if section.settings.decorative_image_3 %}
    <img src="{{ section.settings.decorative_image_3 | image_url }}" 
         class="food-love-decorative decor-3" alt="Decorative element">
  {% endif %}
  {% if section.settings.decorative_image_4 %}
    <img src="{{ section.settings.decorative_image_4 | image_url }}" 
         class="food-love-decorative decor-4" alt="Decorative element">
  {% endif %}
  {% if section.settings.decorative_image_5 %}
    <img src="{{ section.settings.decorative_image_5 | image_url }}" 
         class="food-love-decorative decor-5" alt="Decorative element">
  {% endif %}

  <div class="food-love-container">
    {% if section.settings.heading != blank %}
      <h2 class="food-love-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <div class="food-love-description">{{ section.settings.description }}</div>
    {% endif %}

    <!-- Feature Blocks -->
    <div class="food-love-features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="food-love-feature" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="food-love-feature-icon">
                <img src="{{ block.settings.icon | image_url }}" 
                     alt="{{ block.settings.title | escape }}">
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="food-love-feature-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="food-love-feature-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

