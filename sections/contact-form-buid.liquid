<section class="contact-location-section" data-section-type="contact-location-request" data-section-id="{{ section.id }}">
  {% if st.left_image != blank %}
    <img 
      src="{{ st.left_image | image_url: width: 400 }}" 
      alt="{{ st.left_image.alt | escape }}"
      class="contact-location-left-image"
      loading="lazy"
    >
  {% endif %}
  
  {% if st.right_image != blank %}
    <img 
      src="{{ st.right_image | image_url: width: 400 }}" 
      alt="{{ st.right_image.alt | escape }}"
      class="contact-location-right-image"
      loading="lazy"
    >
  {% endif %}

  {% if st.title != blank %}
    <h2 class="contact-location-title">{{ st.title }}</h2>
  {% endif %}

  {% if st.subtitle != blank %}
    <p class="contact-location-subtitle">{{ st.subtitle }}</p>
  {% endif %}
  <div class="contact-location-wrapper">

    <div class="contact-location-form veggie-buttons">
      {%- form 'contact', class: 'contact-form' -%}
        {%- if form.posted_successfully? -%}
          <div class="form-success" style="color: #F89821; margin-bottom: 20px; text-align: center;">
            Thank you! Your message has been sent.
          </div>
        {%- endif -%}

        {%- if form.errors -%}
          <div class="form-errors" style="color: #ff6b35; margin-bottom: 20px;">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        <div class="form-field-wrapper">
          <label for="contact-name" class="form-label">your name:</label>
          <input 
            type="text" 
            id="contact-name" 
            name="contact[name]" 
            class="form-input" 
            placeholder="name"
            required
          >
        </div>

        <div class="form-field-wrapper">
          <label for="contact-email" class="form-label"> e-mail address:</label>
          <input 
            type="email" 
            id="contact-email" 
            name="contact[email]" 
            class="form-input" 
            placeholder="email address"
            required
          >
        </div>

        <div class="form-field-wrapper half">
           {% if st.show_city %}
          <div class="form-field-group">
            <label for="contact-city" class="form-label">your city:</label>
            <input 
              type="text" 
              id="contact-city" 
              name="contact[city]" 
              class="form-input" 
              placeholder="city"
            >
          </div>
          {% endif %}
           {% if st.show_state %}
            <div class="form-field-group">
            <label for="contact-state" class="form-label">your state:</label>
            <select 
              id="contact-state" 
              name="contact[state]" 
              class="form-select"
            >
              <option value="" disabled selected hidden>State</option>
              <option value="AL">Alabama</option>
              <option value="AK">Alaska</option>
              <option value="AZ">Arizona</option>
              <option value="AR">Arkansas</option>
              <option value="CA">California</option>
              <option value="CO">Colorado</option>
              <option value="CT">Connecticut</option>
              <option value="DE">Delaware</option>
              <option value="FL">Florida</option>
              <option value="GA">Georgia</option>
             
            </select>
          </div>
            {% endif %}
        </div>

        {% if st.show_supermarket %}
  <div class="form-field-wrapper">
    <label for="contact-supermarket" class="form-label">your local supermarket:</label>
    <input 
      type="text" 
      id="contact-supermarket" 
      name="contact[supermarket]" 
      class="form-input" 
      placeholder="supermarket name"
    >
  </div>
{% endif %}

        <div class="form-field-wrapper">
          <label for="contact-message" class="form-label">message:</label>
          <textarea 
            id="contact-message" 
            name="contact[body]" 
            class="form-textarea" 
            placeholder="type here"
            required
          ></textarea>
        </div>
        
        <div class="form-checkbox-group">
          <div class="checkbox-wrapper">
            <input type="checkbox" id="contact-subscribe" autocomplete="off">
            <label for="contact-subscribe">Click here to subscribe to our email list.</label>
          </div>
          <div class="checkbox-wrapper">
            <input type="checkbox" id="contact-terms" required>
            <label for="contact-terms">By clicking submit, you agree to our <a href="/policies/terms-of-service">Terms and Conditions</a> and <a href="/policies/privacy-policy">Privacy Policy</a></label>
          </div>
        </div>

        <div class="contact_btn">
        <button type="submit" class="form-submit-btn button button--primary"><span>send message</span></button>
        </div>
      {%- endform -%}
      <!-- HIDDEN NEWSLETTER PROXY FORM (Generated via Liquid to ensure valid Auth Tokens) -->
      <!-- We use opacity:0 instead of display:none so Shopify's Captcha script can find it and attach tokens -->
      <div style="position: absolute; opacity: 0; pointer-events: none; height: 1px; width: 1px; overflow: hidden;">
        {% form 'customer', id: 'hidden-newsletter-proxy', class: 'hidden-newsletter-proxy' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input type="email" name="contact[email]" id="hidden-newsletter-email" value="">
          <input type="hidden" name="customer[accepts_marketing]" value="true">
        {% endform %}
      </div>
    </div>

    
  </div>

  <!-- Customizable Wave Divider -->
  {%- if st.wave_image != blank -%}
    <div class="wave-divider">
      <img
        src="{{ st.wave_image | img_url: '1920x' }}"
        alt="Wave divider"
        loading="lazy"
      >
    </div>
  {%- else -%}
    <!-- Fallback SVG wave if no image is uploaded -->
    <div class="wave-divider">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%; fill: #0f4735;">
        <path d="M0,60 C200,100 400,20 600,60 C800,100 1000,20 1200,60 L1200,120 L0,120 Z"></path>
      </svg>
    </div>
  {%- endif -%}
</section>

