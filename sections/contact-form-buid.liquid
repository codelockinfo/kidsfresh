<script>
  document.addEventListener('DOMContentLoaded', function() {
    var contactForm = document.querySelector('.contact-location-form form');
    if (!contactForm) return;

    contactForm.addEventListener('submit', function(e) {
      var subscribeCheckbox = document.getElementById('contact-subscribe');
      
      // DEBUG: Log the standard of the checkbox
      // console.log('Checkbox state:', subscribeCheckbox ? subscribeCheckbox.checked : 'Missing');

      // If checkbox is checked and we haven't already processed the subscription
      if (subscribeCheckbox && subscribeCheckbox.checked === true && !contactForm.dataset.subscribed) {
        // console.log('User CHECKED subscribe. Processing newsletter...');
        e.preventDefault(); // Stop the contact form submission for a moment

        var email = document.getElementById('contact-email').value;
        
        // --- Strategy: Hidden Iframe with "Visible" Form ---
        // 1. Create a hidden iframe
        var iframeName = 'newsletter-frame-' + new Date().getTime();
        var iframe = document.createElement('iframe');
        iframe.name = iframeName;
        iframe.style.display = 'none';
        document.body.appendChild(iframe);
        
        // 2. Set the email in the hidden form
        var hiddenEmailInput = document.getElementById('hidden-newsletter-email');
        if(hiddenEmailInput) hiddenEmailInput.value = email;

        // 3. Target the hidden form to the iframe
        var hiddenForm = document.getElementById('hidden-newsletter-proxy');
        if(hiddenForm) {
            hiddenForm.target = iframeName;
            
            // 4. Submit via the iframe
            var hasSubmitted = false;
            function completeSubmission() {
                 if (hasSubmitted) return;
                 hasSubmitted = true;
                 contactForm.dataset.subscribed = 'true';
                 contactForm.submit();
                 // Clean up
                 setTimeout(function() { if(iframe.parentNode) document.body.removeChild(iframe); }, 1000);
            }
    
            iframe.onload = completeSubmission;
    
            document.body.style.cursor = 'wait';
            hiddenForm.submit();
            
            // Safety timeout (2s)
            setTimeout(completeSubmission, 2000);
        } else {
            // Fallback if hidden form missing
            contactForm.dataset.subscribed = 'true';
            contactForm.submit();
        }
      }
    });
  });
</script>