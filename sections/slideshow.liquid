<style>
  /* Text with Image Background Section Styles */
  .text-image-section {
    --wave-height: 100px;
    position: relative;
    overflow: hidden;
    padding-bottom: 0px;
  }

  .text-image-section .desktop-bg {
    display: block;
  }

  .text-image-section .mobile-bg {
    display: none;
  }

  @media (max-width: 768px) {
    .text-image-section .desktop-bg {
      display: none;
    }
    .text-image-section .mobile-bg {
      display: block;
    }
  }

  .text-image-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    width: 100%;
  }

  .text-image-content.text-left {
    margin-left: 0;
    margin-right: auto;
    text-align: left;
  }

  .text-image-content.text-center {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
  }

  .text-image-content.text-right {
    margin-left: auto;
    margin-right: 0;
    text-align: right;
  }

  .section-heading {
    font-size: 84px;
    font-family: var(--font-family);
    font-weight: 700;
    color: #39302D;
    margin-bottom: 0;
    margin-top: 0px;
    line-height: 86px;
    text-transform: lowercase;
  }

  .section-tagline {
    font-size: 32px;
    margin:0;
    font-weight: 500;
    font-family: var(--font-family);
    color: #39302D;
    line-height: 32px;
    margin-bottom: 30px;
  }

  .section-button {
    display: inline-block;
    background: #97d700;
    color: #2c5f2d;
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 18px;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .section-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(151, 215, 0, 0.4);
  }

  /* Image wrapper - determines section height */
  .image-height-wrapper {
    position: relative;
    width: 100%;
    background-color: #F1EAD9;
    line-height: 0;
  }

  /* Background Image Overlay */
  .background-image-overlay {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Wave Divider */
  .wave-divider {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: var(--wave-height);
    overflow: hidden;
    z-index: 1;
  }

  .wave-divider svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    fill: #F1EAD9;
  }

  @media (max-width: 1024px) {
    .section-heading {
      font-size: 60px;
      line-height: 62px;
    }
  }

  @media (max-width: 1440px) {
    .section-heading {
      font-size: 63px;
      line-height: 65px;
    }
  }

  /* Responsive Styles */
  @media (max-width: 968px) {
    .text-image-section {
      --wave-height: 80px;
    }

    .text-image-container {
      padding: 0 20px;
    }

    .section-heading {
      font-size: 42px;
      line-height: 44px;
    }

    .section-tagline {
      font-size: 20px;
    }

    .text-image-content {
      max-width: 100%;
    }
  }

  @media (max-width: 640px) {
    .text-image-section {
      --wave-height: 60px;
    }

    .section-heading {
      font-size: 42px;
    }

    .section-tagline {
      font-size: 20px;
      line-height: 32px;
    }
  }
</style>

<section class="text-image-section" id="text-image-{{ section.id }}">
  {%- for block in section.blocks -%}
    <!-- Image Wrapper - determines section height -->
    <div class="image-height-wrapper" style="background-color: {{ section.settings.bg_color | default: '#F1EAD9' }}">

      {%- if block.settings.desktop_image != blank -%}
        <img src="{{ block.settings.desktop_image | img_url: '1920x' }}" 
             alt="{{ block.settings.heading | escape }}"
             class="background-image-overlay desktop-bg"
             loading="lazy">
      {%- endif -%}
      
      {%- if block.settings.mobile_image != blank -%}
        <img src="{{ block.settings.mobile_image | img_url: '800x' }}" 
             alt="{{ block.settings.heading | escape }}"
             class="background-image-overlay mobile-bg"
             loading="lazy">
      {%- elsif block.settings.desktop_image != blank -%}
        <img src="{{ block.settings.desktop_image | img_url: '800x' }}" 
             alt="{{ block.settings.heading | escape }}"
             class="background-image-overlay mobile-bg"
             loading="lazy">
      {%- endif -%}
    </div>

    <!-- Text Content -->
    <div class="text-image-container" {{ block.shopify_attributes }}>
      <div class="text-image-content text-{{ block.settings.content_alignment | default: 'left' }}">
        {%- if block.settings.heading != blank -%}
          <h2 class="section-heading">{{ block.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if block.settings.subheading != blank -%}
          <p class="section-tagline">{{ block.settings.subheading }}</p>
        {%- endif -%}
        
        {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
          <a href="{{ block.settings.button_link }}" class="section-button">
            {{ block.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
</section>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{% schema %}
{
  "name": "Text with Image Section",
  "tag": "section",
  "class": "section",
  "settings": [
     {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#F1EAD9"
  },
  ],
  "blocks": [
    {
      "type": "text_image_block",
      "name": "Text with Image Block",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Images"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image",
          "info": "If not provided, desktop image will be used"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "a better kid's menu"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "helping you win meals, one bite at a time."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "learn more"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Content Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text with Image Section",
      "blocks": [
        {
          "type": "text_image_block"
        }
      ]
    }
  ]
}
{% endschema %}