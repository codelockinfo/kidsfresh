<style>
  /* Text with Image Section Styles */
  .text-image-section {
    position: relative;
    padding: 80px 0 0;
    background: {{ section.settings.section_background | default: '#f58220' }};
    overflow: hidden;
  }

  .text-image-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    gap: 60px;
    min-height: 500px;
  }

  .text-image-content {
    flex: 1;
    z-index: 2;
  }

  .text-image-image {
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .text-image-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
  }

  .section-heading {
    font-size: 64px;
    font-weight: 900;
    color: {{ section.settings.heading_color | default: '#2c2c2c' }};
    margin-bottom: 20px;
    line-height: 1.1;
    text-transform: lowercase;
  }

  .section-tagline {
    font-size: 24px;
    color: {{ section.settings.tagline_color | default: '#5a5a5a' }};
    line-height: 1.5;
    margin-bottom: 30px;
  }

  .section-button {
    display: inline-block;
    background: {{ section.settings.button_background | default: '#97d700' }};
    color: {{ section.settings.button_text_color | default: '#2c5f2d' }};
    padding: 15px 40px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 18px;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .section-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(151, 215, 0, 0.4);
  }

  /* Wave Divider */
  .wave-divider {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100px;
    overflow: hidden;
    z-index: 1;
  }

  .wave-divider svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    fill: {{ section.settings.wave_color | default: '#f5f5dc' }};
  }

  /* Decorative Food Elements */
  .decorative-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  .decorative-element {
    position: absolute;
    opacity: 0.6;
    transition: transform 0.3s ease;
  }

  .decorative-element img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Responsive Styles */
  @media (max-width: 968px) {
    .text-image-container {
      flex-direction: column;
      gap: 40px;
      padding: 40px 20px 0;
    }

    .section-heading {
      font-size: 48px;
      text-align: center;
    }

    .section-tagline {
      font-size: 20px;
      text-align: center;
    }

    .text-image-content {
      text-align: center;
    }

    .wave-divider {
      height: 80px;
    }
  }

  @media (max-width: 640px) {
    .text-image-section {
      padding: 60px 0 0;
    }

    .section-heading {
      font-size: 36px;
    }

    .section-tagline {
      font-size: 18px;
    }

    .text-image-container {
      min-height: 400px;
    }

    .wave-divider {
      height: 60px;
    }
  }

  /* Hidden classes for mobile/desktop */
  .hidden_desktop {
    display: block !important;
  }

  .hidden_mobile {
    display: none !important;
  }

  @media (min-width: 992px) {
    .hidden_desktop {
      display: none !important;
    }
    .hidden_mobile {
      display: block !important;
    }
  }
</style>

<section class="text-image-section" id="text-image-{{ section.id }}">
  {%- for block in section.blocks -%}
    <div class="text-image-container" {{ block.shopify_attributes }}>
      <!-- Decorative Elements -->
      {%- if block.settings.show_decorative_elements -%}
        <div class="decorative-elements">
          {%- if block.settings.decorative_element_1 -%}
            <div class="decorative-element" style="top: 10%; left: 5%; width: 80px; height: 80px;">
              <img src="{{ block.settings.decorative_element_1 | img_url: '100x' }}" alt="">
            </div>
          {%- endif -%}
          {%- if block.settings.decorative_element_2 -%}
            <div class="decorative-element" style="top: 20%; right: 10%; width: 100px; height: 100px;">
              <img src="{{ block.settings.decorative_element_2 | img_url: '100x' }}" alt="">
            </div>
          {%- endif -%}
          {%- if block.settings.decorative_element_3 -%}
            <div class="decorative-element" style="bottom: 30%; left: 8%; width: 90px; height: 90px;">
              <img src="{{ block.settings.decorative_element_3 | img_url: '100x' }}" alt="">
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <!-- Text Content -->
      <div class="text-image-content" style="order: {{ block.settings.text_position | default: 1 }};">
        {%- if block.settings.heading != blank -%}
          <h2 class="section-heading">{{ block.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if block.settings.tagline != blank -%}
          <p class="section-tagline">{{ block.settings.tagline }}</p>
        {%- endif -%}
        
        {%- if block.settings.button_label != blank and block.settings.button_link != blank -%}
          <a href="{{ block.settings.button_link }}" class="section-button">
            {{ block.settings.button_label }}
          </a>
        {%- endif -%}
      </div>

      <!-- Image Content -->
      <div class="text-image-image" style="order: {{ block.settings.image_position | default: 2 }};">
        {%- if block.settings.image != blank -%}
          <img class="hidden_mobile" 
               src="{{ block.settings.image | img_url: '800x' }}" 
               alt="{{ block.settings.heading | escape }}"
               loading="lazy">
        {%- endif -%}
        
        {%- if block.settings.mobile_image != blank -%}
          <img class="hidden_desktop" 
               src="{{ block.settings.mobile_image | img_url: '600x' }}" 
               alt="{{ block.settings.heading | escape }}"
               loading="lazy">
        {%- elsif block.settings.image != blank -%}
          <img class="hidden_desktop" 
               src="{{ block.settings.image | img_url: '600x' }}" 
               alt="{{ block.settings.heading | escape }}"
               loading="lazy">
        {%- endif -%}
      </div>
    </div>
  {%- endfor -%}

  <!-- Wave Divider -->
  <div class="wave-divider">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0,60 C200,100 400,20 600,60 C800,100 1000,20 1200,60 L1200,120 L0,120 Z"></path>
    </svg>
  </div>
</section>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

