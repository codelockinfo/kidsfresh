{%- style -%}
  .custom-newsletter-{{ section.id }} {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 300px;
  }

  .custom-newsletter-{{ section.id }}__column {
    flex: 1;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    min-height: 300px;
  }

  .custom-newsletter-{{ section.id }}__column--left {
    background-color: {{ section.settings.green_color | default: '#9ACD32' }};
  }

  .custom-newsletter-{{ section.id }}__column--middle {
    background-color: {{ section.settings.orange_color | default: '#FF8C00' }};
  }

  .custom-newsletter-{{ section.id }}__column--right {
    background-color: {{ section.settings.green_color | default: '#9ACD32' }};
  }

  .custom-newsletter-{{ section.id }}__button {
    background-color: {{ section.settings.orange_color | default: '#FF8C00' }};
    color: {{ section.settings.text_color | default: '#3E2723' }};
    border: none;
    padding: 15px 40px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(62, 39, 35, 0.3);
    transition: transform 0.2s, box-shadow 0.2s;
    text-transform: lowercase;
    font-family: inherit;
    margin-bottom: 20px;
  }

  .custom-newsletter-{{ section.id }}__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(62, 39, 35, 0.4);
  }

  .custom-newsletter-{{ section.id }}__button--subscribe {
    background-color: {{ section.settings.green_color | default: '#9ACD32' }};
    padding: 15px 30px;
    margin-left: 10px;
    white-space: nowrap;
  }

  .custom-newsletter-{{ section.id }}__text {
    color: {{ section.settings.text_color | default: '#3E2723' }};
    font-size: 18px;
    line-height: 1.5;
    margin: 0;
    font-weight: 500;
  }

  .custom-newsletter-{{ section.id }}__text-line {
    display: block;
  }

  .custom-newsletter-{{ section.id }}__form-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 500px;
    gap: 15px;
  }

  .custom-newsletter-{{ section.id }}__form-row {
    display: flex;
    width: 100%;
    gap: 10px;
    align-items: center;
  }

  .custom-newsletter-{{ section.id }}__input {
    flex: 1;
    padding: 15px 20px;
    border: 2px solid {{ section.settings.text_color | default: '#3E2723' }};
    border-radius: 8px;
    background-color: #F5F5DC;
    color: {{ section.settings.text_color | default: '#3E2723' }};
    font-size: 16px;
    font-family: inherit;
  }

  .custom-newsletter-{{ section.id }}__input::placeholder {
    color: {{ section.settings.text_color | default: '#3E2723' }};
    opacity: 0.7;
  }

  .custom-newsletter-{{ section.id }}__input:focus {
    outline: none;
    border-color: {{ section.settings.green_color | default: '#9ACD32' }};
  }

  .custom-newsletter-{{ section.id }}__disclaimer {
    color: {{ section.settings.text_color | default: '#3E2723' }};
    font-size: 12px;
    line-height: 1.4;
    margin-top: 10px;
    max-width: 400px;
  }

  .custom-newsletter-{{ section.id }}__social-icons {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-bottom: 20px;
  }

  .custom-newsletter-{{ section.id }}__social-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: {{ section.settings.orange_color | default: '#FF8C00' }};
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 8px rgba(62, 39, 35, 0.3);
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
    text-decoration: none;
  }

  .custom-newsletter-{{ section.id }}__social-icon:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(62, 39, 35, 0.4);
  }

  .custom-newsletter-{{ section.id }}__social-icon svg {
    width: 24px;
    height: 24px;
    fill: #FFFFFF;
  }

  .custom-newsletter-{{ section.id }}__social-icon--facebook svg {
    fill: #FFFFFF;
    font-weight: bold;
  }

  .custom-newsletter-{{ section.id }}__social-icon--instagram svg {
    fill: #FFFFFF;
  }

  .custom-newsletter-{{ section.id }}__social-icon--tiktok svg {
    fill: #FFFFFF;
  }

  /* Desktop View */
  @media screen and (min-width: 750px) {
    .custom-newsletter-{{ section.id }} {
      flex-direction: row;
    }

    .custom-newsletter-{{ section.id }}__column {
      min-height: 350px;
    }

    .custom-newsletter-{{ section.id }}__form-row {
      flex-direction: row;
    }

    .custom-newsletter-{{ section.id }}__button--subscribe {
      margin-left: 10px;
    }
  }

  /* Mobile View */
  @media screen and (max-width: 749px) {
    .custom-newsletter-{{ section.id }}__column {
      padding: 30px 20px;
      min-height: 250px;
    }

    .custom-newsletter-{{ section.id }}__button {
      padding: 12px 30px;
      font-size: 14px;
    }

    .custom-newsletter-{{ section.id }}__text {
      font-size: 16px;
    }

    .custom-newsletter-{{ section.id }}__form-row {
      flex-direction: column;
      width: 100%;
    }

    .custom-newsletter-{{ section.id }}__input {
      width: 100%;
    }

    .custom-newsletter-{{ section.id }}__button--subscribe {
      width: 100%;
      margin-left: 0;
      margin-top: 10px;
    }

    .custom-newsletter-{{ section.id }}__social-icon {
      width: 45px;
      height: 45px;
    }
  }
{%- endstyle -%}

<div class="custom-newsletter-{{ section.id }}">
  <!-- Left Column: Message Us -->
  <div class="custom-newsletter-{{ section.id }}__column custom-newsletter-{{ section.id }}__column--left">
    <button 
      type="button" 
      class="custom-newsletter-{{ section.id }}__button"
      onclick="window.location.href='{{ section.settings.message_url | default: '/pages/contact' }}'"
    >
      {{ section.settings.message_button_text | default: "message us" }}
    </button>
    <p class="custom-newsletter-{{ section.id }}__text">
      <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.left_text_line1 | default: "we're here to help you" }}</span>
      <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.left_text_line2 | default: "win more meals" }}</span>
    </p>
  </div>

  <!-- Middle Column: Email Subscription -->
  <div class="custom-newsletter-{{ section.id }}__column custom-newsletter-{{ section.id }}__column--middle">
    <div class="custom-newsletter-{{ section.id }}__form-wrapper">
      {% form 'customer', class: 'custom-newsletter-form' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="custom-newsletter-{{ section.id }}__form-row">
          <input
            type="email"
            name="contact[email]"
            class="custom-newsletter-{{ section.id }}__input"
            placeholder="{{ section.settings.email_placeholder | default: 'Join our email list....' }}"
            required
            aria-label="Email"
            value="{% if form.email %}{{ form.email }}{% endif %}"
          >
          <button
            type="submit"
            class="custom-newsletter-{{ section.id }}__button custom-newsletter-{{ section.id }}__button--subscribe"
            name="commit"
            aria-label="Subscribe"
          >
            {{ section.settings.subscribe_button_text | default: "subscribe" }}
          </button>
        </div>
        {%- if form.errors -%}
          <div class="custom-newsletter-{{ section.id }}__disclaimer" style="color: #d32f2f;">
            {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
          </div>
        {%- endif -%}
        {%- if form.posted_successfully? -%}
          <div class="custom-newsletter-{{ section.id }}__disclaimer" style="color: #2e7d32;">
            {{ 'newsletter.success' | t | default: 'Thank you for subscribing!' }}
          </div>
        {%- else -%}
          <p class="custom-newsletter-{{ section.id }}__disclaimer">
            <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.disclaimer_line1 | default: "by clicking subscribe, you agree to receive marketing" }}</span>
            <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.disclaimer_line2 | default: "emails from Kidfresh" }}</span>
          </p>
        {%- endif -%}
      {% endform %}
    </div>
  </div>

  <!-- Right Column: Social Media -->
  <div class="custom-newsletter-{{ section.id }}__column custom-newsletter-{{ section.id }}__column--right">
    <div class="custom-newsletter-{{ section.id }}__social-icons">
      {% if section.settings.facebook_url != blank %}
        <a 
          href="{{ section.settings.facebook_url }}" 
          target="_blank" 
          rel="noopener noreferrer"
          class="custom-newsletter-{{ section.id }}__social-icon custom-newsletter-{{ section.id }}__social-icon--facebook"
          aria-label="Facebook"
        >
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#FFFFFF">f</text>
          </svg>
        </a>
      {% endif %}
      
      {% if section.settings.instagram_url != blank %}
        <a 
          href="{{ section.settings.instagram_url }}" 
          target="_blank" 
          rel="noopener noreferrer"
          class="custom-newsletter-{{ section.id }}__social-icon custom-newsletter-{{ section.id }}__social-icon--instagram"
          aria-label="Instagram"
        >
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      {% endif %}
      
      {% if section.settings.tiktok_url != blank %}
        <a 
          href="{{ section.settings.tiktok_url }}" 
          target="_blank" 
          rel="noopener noreferrer"
          class="custom-newsletter-{{ section.id }}__social-icon custom-newsletter-{{ section.id }}__social-icon--tiktok"
          aria-label="TikTok"
        >
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
          </svg>
        </a>
      {% endif %}
    </div>
    <p class="custom-newsletter-{{ section.id }}__text">
      <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.right_text_line1 | default: "follow us to win" }}</span>
      <span class="custom-newsletter-{{ section.id }}__text-line">{{ section.settings.right_text_line2 | default: "more meals" }}</span>
    </p>
  </div>
</div>

