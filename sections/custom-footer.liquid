{% stylesheet %}
.footer-wrapper {
  width: 100%;
  margin: 0;
  padding: 0;
  font-family: inherit;
}

/* ---------- GRID DESKTOP ----------- */
.footer-three-blocks {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  text-align: center;
  padding: 0;
}

.footer-block {
  padding: 40px 20px;
}

/* Buttons */
.footer-btn {
  display: inline-block;
  padding: 12px 28px;
  border-radius: 30px;
  font-weight: bold;
  border: none;
  cursor: pointer;
}

/* Input */
.footer-input {
  width: 90%;
  max-width: 350px;
  padding: 12px 18px;
  border: 2px solid #000;
  border-radius: 10px;
  font-size: 16px;
}

/* Social Icons */
.footer-social-icons {
  display: flex;
  justify-content: center;
  gap: 14px;
}
.footer-social-icons a img {
  width: 40px;
  height: 40px;
}

/* Images */
.footer-block-image {
  width: 80px;
  margin: 18px auto;
}

/* Sub text */
.footer-subtext {
  margin-top: 10px;
  font-size: 14px;
}

.email-with-btn{
  display: flex;
    gap: 14px;
}

/* -------- MOBILE --------- */
@media (max-width: 768px) {
  .footer-three-blocks {
    grid-template-columns: 1fr;
  }
  
  .footer-block {
    padding: 25px 20px;
  }
}

.my-footer-btn{
      background: transparent !important;
    color: #63441D;
    font-family: "GT Walsheim";
    font-size: 30px;
    line-height: 44px;
    font-weight: 700;
    text-decoration: none;
    box-shadow: none;
    cursor: pointer;
    transition: transform .2s 
ease, box-shadow .2s 
ease;
    text-align: center;
    border-radius: 35px;
    padding: 19px 34px;
    border: none;
    text-transform: lowercase;
    transform: none !important;
}
{% endstylesheet %}


<div class="footer-wrapper">

  <div class="footer-three-blocks" style="background: {{ section.settings.background_color }}">

    <!-- BLOCK 1 -->
    <div class="footer-block" style="background: {{ section.settings.block1_bg }}">

      <img src="{{ section.settings.block1_image | image_url }}" class="footer-block-image" alt="">

     <a href="/collections/all" class="my-footer-btn"><span>message us</span></a>

      <p class="footer-subtext"
         style="color: {{ section.settings.block1_sub_color }};
                font-size: {{ section.settings.block1_sub_size }}px;">
        {{ section.settings.block1_subtext }}
      </p>

    </div>

    <!-- BLOCK 2 -->
    <div class="footer-block" style="background: {{ section.settings.block2_bg }}">

      <img src="{{ section.settings.block2_image | image_url }}" class="footer-block-image" alt="">

      <div class="email-with-btn"><input 
        class="footer-input"
        type="email"
        placeholder="{{ section.settings.news_placeholder }}"
        style="font-size: {{ section.settings.news_input_size }}px;"
      >



      <button 
        class="footer-btn"
        style="background: {{ section.settings.news_btn_bg }};
               color: {{ section.settings.news_btn_color }};
               font-size: {{ section.settings.news_btn_size }}px;">
        {{ section.settings.news_btn_text }}
      </button></div>

      <p class="footer-subtext"
         style="color: {{ section.settings.news_sub_color }};
                font-size: {{ section.settings.news_sub_size }}px;">
        {{ section.settings.news_subtext }}
      </p>

    </div>

    <!-- BLOCK 3 -->
    <div class="footer-block" style="background: {{ section.settings.block3_bg }}">

      <img src="{{ section.settings.block3_image | image_url }}" class="footer-block-image" alt="">

      <div class="footer-social-icons">
        {% if section.settings.social_facebook != blank %}
          <a href="{{ section.settings.social_facebook }}"><img src="{{ section.settings.icon_facebook | image_url }}"></a>
        {% endif %}
        {% if section.settings.social_instagram != blank %}
          <a href="{{ section.settings.social_instagram }}"><img src="{{ section.settings.icon_instagram | image_url }}"></a>
        {% endif %}
        {% if section.settings.social_tiktok != blank %}
          <a href="{{ section.settings.social_tiktok }}"><img src="{{ section.settings.icon_tiktok | image_url }}"></a>
        {% endif %}
      </div>

      <p class="footer-subtext"
         style="color: {{ section.settings.block3_sub_color }};
                font-size: {{ section.settings.block3_sub_size }}px;">
        {{ section.settings.block3_subtext }}
      </p>

    </div>

  </div>

</div>

