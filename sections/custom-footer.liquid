<footer class="custom-footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="custom-footer__wrapper page-width">
    <div class="custom-footer__blocks grid grid--1-col grid--3-col-desktop">
      
      <!-- Block 1: Button Block -->
      {%- assign block1 = section.blocks | where: 'type', 'block_1' | first -%}
      <div class="custom-footer__block custom-footer__block-1 grid__item"{% if block1 %} {{ block1.shopify_attributes }}{% endif %}>
        {%- if section.settings.block1_image != blank -%}
          <div class="custom-footer__block-image">
            {{ section.settings.block1_image | image_url: width: 500 | image_tag: loading: 'lazy', alt: section.settings.block1_image.alt }}
          </div>
        {%- endif -%}
        
        <div class="custom-footer__block-content">
          {%- if section.settings.block1_button_text != blank -%}
            <a href="{{ section.settings.block1_button_link }}" class="custom-footer__block-1-button button">
              {{ section.settings.block1_button_text }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.block1_subtext != blank -%}
            <div class="custom-footer__block-1-subtext">
              {{ section.settings.block1_subtext }}
            </div>
          {%- endif -%}
        </div>
      </div>

      <!-- Block 2: Newsletter Block -->
      {%- assign block2 = section.blocks | where: 'type', 'block_2' | first -%}
      <div class="custom-footer__block custom-footer__block-2 grid__item"{% if block2 %} {{ block2.shopify_attributes }}{% endif %}>
        {%- if section.settings.block2_image != blank -%}
          <div class="custom-footer__block-image">
            {{ section.settings.block2_image | image_url: width: 500 | image_tag: loading: 'lazy', alt: section.settings.block2_image.alt }}
          </div>
        {%- endif -%}
        
        <div class="custom-footer__block-content">
          {%- form 'customer', id: 'ContactFooterCustom', class: 'custom-footer__newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="custom-footer__newsletter-wrapper">
              <input
                type="email"
                name="contact[email]"
                class="custom-footer__block-2-input field__input"
                value="{{ form.email }}"
                placeholder="{{ section.settings.block2_input_placeholder }}"
                required
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                {% elsif form.posted_successfully? %}
                  aria-describedby="ContactFooterCustom-success"
                {% endif %}
              >
              <button
                type="submit"
                class="custom-footer__block-2-button button"
                name="commit"
                aria-label="{{ section.settings.block2_button_text }}"
              >
                {{ section.settings.block2_button_text }}
              </button>
            </div>
            
            {%- if form.errors -%}
              <small class="form__message" id="ContactFooterCustom-error">
                {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
              </small>
            {%- endif -%}
            
            {%- if form.posted_successfully? -%}
              <h3 class="form__message form__message--success" id="ContactFooterCustom-success" tabindex="-1" autofocus>
                {{ 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
          
          {%- if section.settings.block2_subtext != blank -%}
            <div class="custom-footer__block-2-subtext">
              {{ section.settings.block2_subtext }}
            </div>
          {%- endif -%}
        </div>
      </div>

      <!-- Block 3: Social Media Block -->
      {%- assign block3 = section.blocks | where: 'type', 'block_3' | first -%}
      <div class="custom-footer__block custom-footer__block-3 grid__item"{% if block3 %} {{ block3.shopify_attributes }}{% endif %}>
        {%- if section.settings.block3_image != blank -%}
          <div class="custom-footer__block-image">
            {{ section.settings.block3_image | image_url: width: 500 | image_tag: loading: 'lazy', alt: section.settings.block3_image.alt }}
          </div>
        {%- endif -%}
        
        <div class="custom-footer__block-content">
          <ul class="custom-footer__social-list list-unstyled" role="list">
            {%- if section.settings.block3_show_facebook and settings.social_facebook_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_facebook_link }}" class="custom-footer__block-3-social-icon link" aria-label="Facebook">
                  <span class="svg-wrapper">
                    {{- 'icon-facebook.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
            
            {%- if section.settings.block3_show_instagram and settings.social_instagram_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_instagram_link }}" class="custom-footer__block-3-social-icon link" aria-label="Instagram">
                  <span class="svg-wrapper">
                    {{- 'icon-instagram.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
            
            {%- if section.settings.block3_show_tiktok and settings.social_tiktok_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_tiktok_link }}" class="custom-footer__block-3-social-icon link" aria-label="TikTok">
                  <span class="svg-wrapper">
                    {{- 'icon-tiktok.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
            
            {%- if section.settings.block3_show_twitter and settings.social_twitter_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_twitter_link }}" class="custom-footer__block-3-social-icon link" aria-label="Twitter">
                  <span class="svg-wrapper">
                    {{- 'icon-twitter.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
            
            {%- if section.settings.block3_show_youtube and settings.social_youtube_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_youtube_link }}" class="custom-footer__block-3-social-icon link" aria-label="YouTube">
                  <span class="svg-wrapper">
                    {{- 'icon-youtube.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
            
            {%- if section.settings.block3_show_pinterest and settings.social_pinterest_link != blank -%}
              <li class="custom-footer__social-item">
                <a href="{{ settings.social_pinterest_link }}" class="custom-footer__block-3-social-icon link" aria-label="Pinterest">
                  <span class="svg-wrapper">
                    {{- 'icon-pinterest.svg' | inline_asset_content -}}
                  </span>
                </a>
              </li>
            {%- endif -%}
          </ul>
          
          {%- if section.settings.block3_subtext != blank -%}
            <div class="custom-footer__block-3-subtext">
              {{ section.settings.block3_subtext }}
            </div>
          {%- endif -%}
        </div>
      </div>

    </div>
  </div>
</footer>

