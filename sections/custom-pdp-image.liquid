<style>
 .veggie-hover-section .custom-background-section {
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    z-index: -1;
  }

  .custom-background-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  /* Top Wave Shape */
  .custom-background-wave-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 1;
    display: block;
    line-height: 0;
    pointer-events: none;
  }

  .custom-background-wave-top img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Bottom Wave Shape */
  .custom-background-wave-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    z-index: 1;
    display: block;
    line-height: 0;
    pointer-events: none;
  }

  .custom-background-wave-bottom img {
    width: 100%;
    height: auto;
    display: block;
  }

  .custom-background-wrapper {
    position: relative;
    z-index: 2;
    padding: 80px 0 40px 0;
    margin-top:-103px;
  }

  .custom-background-container {
    margin: 0 auto;
    padding: 0 120px;
    display: flex;
    width: 100%;
  }

  .custom-background-text-content {
    max-width: 67%;
}

  .custom-background-heading{
    font-size: 84px;
    font-weight: 700;
    line-height: 86px;
    margin-bottom: 30px;
    color: #f58220;
    text-transform: lowercase;
    font-family: var(--font-family);
}
  .custom-background-text {
    font-size: 24px;
    line-height: 34px;
    color: #ffffff;
    margin-bottom: 20px;
  }

  .custom-background-text:last-child {
    margin-bottom: 0;
  }

  .custom-background-image-wrapper {
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  {% comment %} .custom-background-image-container {
    position: relative;
    width: 100%;
    max-width: 500px;
    z-index: 2;
  } {% endcomment %}

  .custom-background-image-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

@media (min-width: 1200px) and (max-width: 1400px) {
    .custom-background-heading{
        font-size: 63px;
        line-height: 65px;
    }

    .custom-background-text {
      font-size: 22px;
      line-height: 32px;
    }
}
@media (min-width: 991px) and (max-width: 1200px) {
    .custom-background-heading{
        font-size: 50px;
        line-height: 52px;
    }
    .custom-background-text {
      font-size: 22px;
      line-height: 32px;
    }
    .custom-background-container{
        padding: 0 88px;
    }
}
@media (min-width: 769px) and (max-width: 991px) {
    .custom-background-heading{
        font-size: 46px;
        line-height: 48px;
    }
    .custom-background-container{
        padding: 0 46px;
    }
    .custom-background-text {
      font-size: 22px;
      line-height: 32px;
    }
}


@media (max-width: 768px) {

  /* Stack vertical */
  .custom-background-container {
    flex-direction: column;
    padding: 0 0px;
  }

  /* MOVE IMAGE TO TOP */
  .custom-background-image-wrapper {
    order: -1;                
    width: 100%;
    display: flex;
    justify-content: flex-end;  
    margin-top: -29%;
  }

  /* IMAGE RIGHT SIDE OFFSET */
  .custom-background-image-container img {
    width: 100%;
    transform: translateX(23%);  
  }


 .custom-background-image-container {
    overflow: hidden;
  }

  

  /* Text container */
 
       .custom-background-text-content {
        max-width: 100%;
        text-align: left;
        margin: -89px 20px 0;
    }
  
  .custom-background-heading {
    font-size: 42px;
    line-height: 46px;
  }

  .custom-background-text {
    font-size: 20px;
    line-height: 30px;
  }

  .custom-background-wrapper {
    padding: 67px 0;
  }
}

</style>

<section class="custom-background-section" 
         {% if section.settings.background_image %}
           style="background-image: url('{{ section.settings.background_image | img_url: '1920x' }}');"
         {% else %}
           style="background-color: {{ section.settings.background_color }};"
         {% endif %}>
  
  {% comment %} Top Curved Wave {% endcomment %}
  {% if section.settings.top_wave_image %}
    <div class="custom-background-wave-top">
      <img src="{{ section.settings.top_wave_image | img_url: 'master' }}" 
           alt="Top wave decoration"
           loading="lazy"
           aria-hidden="true">
    </div>
  {% endif %}

  {% comment %} Main Content {% endcomment %}
  <div class="custom-background-wrapper">
    <div class="custom-background-container">
      
      {% comment %} Left Side - Text Content {% endcomment %}
      <div class="custom-background-text-content">
        {% if section.settings.heading != blank %}
          <h2 class="custom-background-heading" style="color: {{ section.settings.heading_color }};">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.text_paragraph_1 != blank %}
          <p class="custom-background-text" style="color: {{ section.settings.text_color }};">
            {{ section.settings.text_paragraph_1 }}
          </p>
        {% endif %}

        {% if section.settings.text_paragraph_2 != blank %}
          <p class="custom-background-text" style="color: {{ section.settings.text_color }};">
            {{ section.settings.text_paragraph_2 }}
          </p>
        {% endif %}
      </div>

      {% comment %} Right Side - Plate Image {% endcomment %}
      {% if section.settings.plate_image %}
        <div class="custom-background-image-wrapper">
          <div class="custom-background-image-container">
            <img src="{{ section.settings.plate_image | img_url: 'master' }}" 
                 alt="{{ section.settings.plate_alt_text | default: 'Plate with food' }}"
                 loading="lazy">
          </div>
        </div>
      {% endif %}

    </div>
  </div>

  {% comment %} Bottom Curved Wave {% endcomment %}
  {% if section.settings.bottom_wave_image %}
    <div class="custom-background-wave-bottom">
      <img src="{{ section.settings.bottom_wave_image | img_url: 'master' }}" 
           alt="Bottom wave decoration"
           loading="lazy"
           aria-hidden="true">
    </div>
  {% endif %}

</section>

{% schema %}
{
  "name": "Custom Background Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Recommended size: 1920x800px. If no image is selected, background color will be used."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#2c5f2d",
      "info": "Used when no background image is selected"
    },
    {
      "type": "header",
      "content": "Wave Overlays"
    },
    {
      "type": "image_picker",
      "id": "top_wave_image",
      "label": "Top Curved Wave Image",
      "info": "Upload a PNG with transparent background for the top wave overlay (light green curved shape)"
    },
    {
      "type": "image_picker",
      "id": "bottom_wave_image",
      "label": "Bottom Curved Wave Image",
      "info": "Upload a PNG with transparent background for the bottom wave overlay (cream/orange curved shape)"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "the best ingredients only matter if they eat them."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#f58220"
    },
    {
      "type": "textarea",
      "id": "text_paragraph_1",
      "label": "Text Paragraph 1",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et massa mi. Aliquam in hendrerit urna. Pellentesque sit amet sapien fringilla, mattis ligula consectetur, ultrices mauris."
    },
    {
      "type": "textarea",
      "id": "text_paragraph_2",
      "label": "Text Paragraph 2",
      "default": "Maecenas vitae mattis tellus. Nullam quis imperdiet augue. Vestibulum auctor ornare leo, non suscipit magna interdum eu. Curabitur pellentesque nibh nibh, at maximus ante fermentum sit amet."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Plate Image"
    },
    {
      "type": "image_picker",
      "id": "plate_image",
      "label": "Plate Image (Right Side)",
      "info": "Upload the plate image with food that appears on the right side. Recommended: PNG with transparent background."
    },
    {
      "type": "text",
      "id": "plate_alt_text",
      "label": "Plate Image Alt Text",
      "default": "Plate with food"
    }
  ],
  "presets": [
    {
      "name": "Custom Background Section"
    }
  ]
}
{% endschema %} {% endcomment %}


