{%- style -%}
  .winning-ingredients-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    position: relative;
    overflow: hidden;
  }

  .winning-ingredients-{{ section.id }} .container {
    padding: 0 80px;
  }
 
  .winning-ingredients-{{ section.id }} .background-image-left {
    position: absolute;
    left: -120px;
    top: -25px;
    width: 300px;
    height: 300px;
    z-index: 1;
    pointer-events: none;
  }
 
  .winning-ingredients-{{ section.id }} .background-image-left img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
 
  .winning-ingredients-{{ section.id }} .background-image-right {
    position: absolute;
    right: -138px;
    bottom: 0;
    width: 300px;
    height: 300px;
    z-index: 0;
    pointer-events: none;
  }
 
  .winning-ingredients-{{ section.id }} .background-image-right img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
 
  .winning-ingredients-{{ section.id }} .page-width {
    position: relative;
    z-index: 2;
  }
 
  .winning-ingredients-{{ section.id }} .section-heading {
    margin: 0px;
    text-align: {{ section.settings.heading_alignment }};
    font-family: var(--font-family);
    font-size: 84px;
    font-weight: 700;
    line-height: 86px;
    color: {{ section.settings.title_color }};
    margin-bottom: 56px;
    text-transform: lowercase;
  }
 
  .winning-ingredients-{{ section.id }} .columns-wrapper {
    display: flex;
    gap: 26px;
    margin-bottom: 67px;
    justify-content: center;
    scrollbar-width: none;
    padding: 10px 0;
    overflow: visible;
  }

    .winning-ingredients-{{ section.id }} .column-item-wrapper {
        width: 319px;
        height: 480px;
    }
 
  .winning-ingredients-{{ section.id }} .column-item {
    border: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: 2.5rem 2rem;
    height: 100%;
    background-color: transparent;
    position: relative;
    transition: transform 0.3s ease;
    transform-origin: center;
  }

  .winning-ingredients-{{ section.id }} .column-item:hover {
    transform: scale(1.04);
    z-index: 10;
  }
 
  .winning-ingredients-{{ section.id }} .column-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 2rem;
    display: block;
  }
 
  .winning-ingredients-{{ section.id }} .column-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
 
  .winning-ingredients-{{ section.id }} .column-heading {
    font-family: var(--font-family);
    font-size: 124px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 50px 0 35px;
    line-height: 86px;
    text-align: center;
  }
 
  .winning-ingredients-{{ section.id }} .column-preheading {
    font-size: 29px;
    font-family: var(--font-family);
    font-weight: 500;
    color: {{ section.settings.preheading_color }};
    margin-bottom: 35px;
    line-height: 100%;
    text-align: center;
  }
 
  .winning-ingredients-{{ section.id }} .column-description {
    font-family: var(--font-family);
    font-size: 21px;
    color: {{ section.settings.description_color }};
    line-height: 33px;
    font-weight: 400;
    margin-bottom: 40px;
    text-align: center;
  }
 
  .winning-ingredients-{{ section.id }} .button-wrapper {
    text-align: center;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }
  .winning-ingredients-{{ section.id }} .button-wrapper .button {
  background: transparent!important;
  color: #63441D;
  font-family: var(--font-family);
  font-size: 30px;
  line-height: 44px;
  font-weight: 600;
  text-decoration: none;
  box-shadow: none;
  cursor: pointer;
  transition: transform .2s ease, box-shadow .2s ease;
  text-align: center;
  border-radius: 35px;
  padding: 16px 54px;
  border: none;
  text-transform: lowercase;
    transform: none !important;
}

.winning-ingredients-{{ section.id }} .button-wrapper .button:before {
  background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_23_4.png?v=1764654764);
  background-size: 100% 100%;
  z-index: 2;
}

.winning-ingredients-{{ section.id }} .button-wrapper .button span {
  z-index: 3;
}

.winning-ingredients-{{ section.id }} .button-wrapper .button:after {
  content: '';
   background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_25_1.png?v=1764654764);
  background-size: 100% 100%;
  padding: 16px 54px;
  bottom: -6px;
  z-index: 1;
  box-shadow: none;
}

.winning-ingredients-{{ section.id }} .button-wrapper .button:hover:before {
  background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_23_5.png?v=1764654764) !important;
  background-size: 100% 100% !important;
}

