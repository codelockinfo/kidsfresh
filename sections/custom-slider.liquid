<div class="winning-ingredients-{{ section.id }}">
  {%- if section.settings.background_image_left != blank -%}
    <div class="background-image-left">
      <img src="{{ section.settings.background_image_left | img_url: '600x600' }}"
           alt="Background decoration"
           loading="lazy">
    </div>
  {%- endif -%}
 
  {%- if section.settings.background_image_right != blank -%}
    <div class="background-image-right">
      <img src="{{ section.settings.background_image_right | img_url: '600x600' }}"
           alt="Background decoration"
           loading="lazy">
    </div>
  {%- endif -%}
 
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2 class="section-heading">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}
   
    <div class="columns-wrapper">
      {%- for block in section.blocks -%}
        <div class="column-item-wrapper" {{ block.shopify_attributes }}>
          <div class="column-item">
            {%- if block.settings.icon != blank -%}
              <div class="column-icon">
                <img src="{{ block.settings.icon | img_url: '96x96' }}"
                     alt="{{ block.settings.heading }}"
                     loading="lazy"
                     width="48"
                     height="48">
              </div>
            {%- endif -%}
           
            {%- if block.settings.heading != blank -%}
              <h3 class="column-heading">{{ block.settings.heading }}</h3>
            {%- endif -%}
           
            {%- if block.settings.preheading != blank -%}
              <div class="column-preheading">{{ block.settings.preheading }}</div>
            {%- endif -%}
           
            {%- if block.settings.description != blank -%}
              <div class="column-description">{{ block.settings.description }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
   
    {%- if section.settings.button_label != blank -%}
      <div class="button-wrapper">
        <a href="{{ section.settings.button_link }}"
           class="button button--{{ section.settings.button_style }}">
          <span>{{ section.settings.button_label }}</span>
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

