  max-height: 500px;
  padding-top: 10px;
}

/* MOBILE BACKGROUND SWITCH */
@media (max-width:768px) {
  .faq-tab {
    background-image: var(--tab-mobile-bg) !important;
  }

  .faq-item {
    background-image: var(--faq-mobile-bg) !important;
  }
}
</style>



<div class="faq-container">

  <!-- TABS -->
  <div class="faq-tabs"
       style="
         --tab-desktop-bg:url({{ section.settings.tabs_bg_desktop | image_url }});
         --tab-mobile-bg:url({{ section.settings.tabs_bg_mobile | image_url }});
       ">
    
    {% for block in section.blocks %}
      {% if block.type == 'tab' %}
        <div class="faq-tab"
             data-tab="{{ block.settings.tab_id }}"
             style="background-image:var(--tab-desktop-bg);">
          {{ block.settings.tab_title }}
        </div>
      {% endif %}
    {% endfor %}

  </div>


  <!-- FAQ CONTENT -->
  {% for tab in section.blocks %}
    {% if tab.type == 'tab' %}
      <div class="faq-section" id="section-{{ tab.settings.tab_id }}">

        {% for faq in section.blocks %}
          {% if faq.type == 'faq' and faq.settings.parent_tab == tab.settings.tab_id %}

            <div class="faq-item"
                 style="
                   background-image:var(--faq-desktop-bg);
                   --faq-mobile-bg:url({{ section.settings.faq_bg_mobile | image_url }});
                 ">
              
              <div class="faq-item-title">
                <span>{{ faq.settings.faq_question }}</span>
                <span class="faq-arrow">⌄</span>
              </div>

              <div class="faq-item-content">
                <p>{{ faq.settings.faq_answer }}</p>
              </div>

            </div>

          {% endif %}
        {% endfor %}

      </div>
    {% endif %}
  {% endfor %}

</div>



<script>
document.addEventListener("DOMContentLoaded", () => {

  const tabs = document.querySelectorAll(".faq-tab");
  const sections = document.querySelectorAll(".faq-section");

  // Default activate
  if (tabs.length > 0) {
    tabs[0].classList.add("active");
    sections[0].classList.add("active");
  }

  // Switching tabs
  tabs.forEach(tab => {
    tab.addEventListener("click", () => {
      const id = tab.dataset.tab;

      tabs.forEach(t => t.classList.remove("active"));
      sections.forEach(s => s.classList.remove("active"));

      tab.classList.add("active");
      document.getElementById("section-" + id).classList.add("active");
    });
  });

  // Accordion
  document.querySelectorAll(".faq-item").forEach(item => {
    item.addEventListener("click", () => {
      item.classList.toggle("open");
    });
  });

});
</script>



