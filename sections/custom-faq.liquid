    font-size: 45px; 
    line-height: 50px;
    color: #fff; 
    text-decoration: none;
    font-weight: 400;
    cursor: pointer;
    z-index: 0;
}

.faq-tab::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -40px;
    width: 0;
    height: 50px;
    background-image: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_19_2.png?v=1765171177);
