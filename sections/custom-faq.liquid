<style>
.main-faq-wrapper {
  width: 100%;
}
.faq-tabs-wrapper {
  background-image: url({{ section.settings.tabs_bg_desktop | image_url }});
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  padding: 18px 0 35px;
  background-color: #8DC13F;
}
@media(max-width:768px){
  .faq-tabs-wrapper {
    background-image: url({{ section.settings.tabs_bg_mobile | image_url }});
  }
   .faq-items-wrapper {
    background-image: url({{ section.settings.faq_bg_mobile | image_url }});
  }
}

.faq-custom-container {
  max-width: 1990px;
  margin: 0 auto;
  padding: 0 210px;
}

/* FAQ ITEMS BACKGROUND WRAPPER */
.faq-items-wrapper {
  background-image: url({{ section.settings.faq_bg_desktop | image_url }});
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: center;
  padding: 40px 0;
}

/* FILTER BY TEXT */
.filter-title {
  color: #fff;
  font-weight: 700;
  font-size: 45px;
  font-family: GT Walsheim Trial;
  text-transform: lowercase;
}

/* TABS */
.faq-tabs {
  display: flex;
  align-items: center;
  gap: 71px;
  color: #fff;
  justify-content: center;
}

/* GRID ONLY FOR TABS */
.tabs-grid {
  display: grid;
  grid-template-columns: repeat(4, auto);
  gap: 71px;
}

@media(max-width:768px){
    .tabs-grid {
        grid-template-columns: repeat(2, auto);
    }
  .faq-tabs {
    display: block;
    text-align: center;
  }
  .faq-tab { font-size: 33px !important; }
  .filter-title { font-size: 33px; }
  .faq-custom-container {
    padding: 0 30px;
  }
  .faq-item-title {
    font-size: 18px !important;
    line-height: 34px !important;
  }
  .faq-item.open .faq-item-content {
    font-size: 16px !important;
    line-height: 22px !important;
}
}
@media(min-width:769px) and (max-width:991px){
    .faq-tab {
        font-size: 29px !important;
    }
    .faq-custom-container {
        padding: 0 73px;
    }
    .filter-title { 
        font-size: 36px;
    }
    .faq-item-title {
        font-size: 26px !important;
        line-height: 50px !important;
    }
    .faq-item.open .faq-item-content {
        font-size: 18px !important;
        line-height: 26px !important;
    }
}

@media(min-width:992px) and (max-width:1024px){
    .faq-tab {
        font-size: 37px !important;
    }
    .faq-custom-container {
        padding: 0 100px;
    }
    .faq-item-title {
        font-size: 30px !important;
            line-height: 38px;
    }
    .faq-item.open .faq-item-content {
        font-size: 22px !important;
    } 
}

.faq-tab {
  opacity: 0.7;
  transition: 0.3s ease;
  cursor: pointer;
  font-family: GT Walsheim Trial;
  font-size: 45px;
  font-weight: 400;
}

.faq-tab:hover,
.faq-tab.active {
  opacity: 1;
  text-decoration: underline;
}

/* FAQ SECTION */
.faq-section { display: none; }
.faq-section.active { display: block; }

/* FAQ ITEM BOX */
.faq-item {
    background: #F1EAD9;
    border-radius: 10px;
    margin-bottom: 24px;
    padding: 17px 22px;
    cursor: pointer;
    border: 3px solid #0F4735;
}

.faq-item-title {
  display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 500;
    font-size: 40px;
    font-family: GT Walsheim Trial;
    color: #0F4735;
    line-height: 50px
}
.open .faq-item-title .faq-arrow{
    background: #95C940;
}
.faq-arrow {
  transition: .3s ease;
  display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 40px;
    border: 3px solid #0F4735;
    height: 40px;
    background: #F89821;
}
.faq-item.open .faq-arrow {
  transform: rotate(180deg);
}

.faq-item-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height .4s ease;
}
.faq-item.open .faq-item-content {
     max-height: 400px;
    width: 92%;
    font-size: 24px;
    font-family: GT Walsheim Trial;
    line-height: 33px;
    color: #5D3328;
}
.faq-item.open .faq-item-content p{
    margin: 0;
}
.faq-item-title .faq-arrow svg {
    width: 26px !important;
    height: auto !important;
}

</style>


<!-- MAIN WRAPPER -->
<div class="main-faq-wrapper">

  <!-- TABS BACKGROUND SECTION -->
  <div class="faq-tabs-wrapper">
    <div class="faq-custom-container">

      <div class="faq-tabs">
        <span class="filter-title">filter by:</span>

        <div class="tabs-grid">
          {% for block in section.blocks %}
            {% if block.type == 'tab' %}
              <div class="faq-tab" data-tab="{{ block.settings.tab_id }}">
                {{ block.settings.tab_title }}
              </div>
            {% endif %}
          {% endfor %}
        </div>

      </div>

    </div>
  </div>


  <!-- FAQ ITEMS BACKGROUND SECTION -->
  <div class="faq-items-wrapper">
    <div class="faq-custom-container">

      {% for tab in section.blocks %}
        {% if tab.type == 'tab' %}

          <div class="faq-section" id="section-{{ tab.settings.tab_id }}">

            {% for faq in section.blocks %}
              {% if faq.type == 'faq' and faq.settings.parent_tab == tab.settings.tab_id %}

                <div class="faq-item">
                  <div class="faq-item-title">
                    <span>{{ faq.settings.faq_question }}</span>
                    <span class="faq-arrow">
                        <svg xmlns="http://www.w3.org/2000/svg" width="33" height="19" viewBox="0 0 33 19" fill="none">
<path d="M1.36328 1.46094L16.3633 15.4609L31.3633 1.46094" stroke="#0F4735" stroke-width="4"/>
</svg>
                    </span>
                  </div>

                  <div class="faq-item-content">
                    <p>{{ faq.settings.faq_answer }}</p>
                  </div>
                </div>

              {% endif %}
            {% endfor %}

          </div>

        {% endif %}
      {% endfor %}

    </div>
  </div>

</div>


<script>
document.addEventListener("DOMContentLoaded", () => {

  const tabs = document.querySelectorAll(".faq-tab");
  const sections = document.querySelectorAll(".faq-section");

  if (tabs.length > 0) {
    tabs[0].classList.add("active");
    sections[0].classList.add("active");
  }

  tabs.forEach(tab => {
    tab.addEventListener("click", () => {
      const id = tab.dataset.tab;

      tabs.forEach(t => t.classList.remove("active"));
      sections.forEach(s => s.classList.remove("active"));

      tab.classList.add("active");
      document.getElementById("section-" + id).classList.add("active");
    });
  });

  document.querySelectorAll(".faq-item").forEach(item => {
    item.addEventListener("click", () => {
      item.classList.toggle("open");
    });
  });

});
</script>



{% schema %}
{
  "name": "Dynamic FAQ Tabs Section",

  "settings": [
    {
      "type": "image_picker",
      "id": "tabs_bg_desktop",
      "label": "Tabs Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "tabs_bg_mobile",
      "label": "Tabs Background Image (Mobile)"
    },
    {
      "type": "image_picker",
      "id": "faq_bg_desktop",
      "label": "FAQ Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "faq_bg_mobile",
      "label": "FAQ Background Image (Mobile)"
    }
  ],

  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        { "type": "text", "id": "tab_title", "label": "Tab Title" },
        { "type": "text", "id": "tab_id", "label": "Tab Unique ID" }
      ]
    },
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        { "type": "text", "id": "parent_tab", "label": "Parent Tab ID" },
        { "type": "text", "id": "faq_question", "label": "FAQ Question" },
        { "type": "textarea", "id": "faq_answer", "label": "FAQ Answer" }
      ]
    }
  ],

  "presets": [
    {
      "name": "Dynamic FAQ Tabs"
    }
  ]
}
{% endschema %}
