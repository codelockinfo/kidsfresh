/* Animation */
#celebrate-plate-{{ section.id }} .broccoli-image {
  position: absolute;
  bottom: 52%;
  left: -10%;          /* starting hidden */
  width: 19pc;
  height: auto;
  cursor: pointer;
  z-index: 20;
  opacity: 1;
  animation: broccoliMove 4.5s ease-in-out infinite;
}

/* Stop animation when hovering while out */
#celebrate-plate-{{ section.id }} .broccoli-image.broccoli-out.hover-paused {
  animation: none !important;
  left: -5% !important;
}


/* ANIMATION */
@keyframes broccoliMove {
  0% {
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }

  20% {                /* comes out quickly */
    left: -5%;
    transform: translateX(0);
    rotate: 6deg;
  }

  54.44% {             /* stay outside for 2 seconds (2000ms out of 4500ms = 44.44%) */
    left: -5%;
    transform: translateX(0);
    rotate: 6deg;
  }

  70% {                /* goes back in quickly */
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }

  100% {               /* stay inside */
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }
}

