<section id="celebrate-plate-{{ section.id }}" class="celebrate-plate-section">

  <!-- DESKTOP BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_desktop %}
    <img 
      class="bg-img desktop-bg" 
      src="{{ section.settings.bg_desktop | img_url: 'master' }}"
      alt="background">
  {% endif %}

  <!-- MOBILE BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_mobile %}
    <img 
      class="bg-img mobile-bg" 
      src="{{ section.settings.bg_mobile | img_url: 'master' }}"
      alt="background">
  {% endif %}

  <!-- TOP DECOR -->
  {% if section.settings.top_decor != blank %}
    <img class="top-decor" src="{{ section.settings.top_decor | img_url: 'master' }}">
  {% endif %}

  <!-- CONTENT -->
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.desc }}</p>

    {% if section.settings.btn_text != blank %}
      <a href="{{ section.settings.btn_link }}" class="cta-btn">
        {{ section.settings.btn_text }}
      </a>
    {% endif %}
  </div>

  <!-- BOTTOM DECOR -->
  {% if section.settings.bottom_decor != blank %}
    <img class="bottom-decor" src="{{ section.settings.bottom_decor | img_url: 'master' }}">
  {% endif %}

</section>


<style>
  /* SECTION WRAPPER */
  #celebrate-plate-{{ section.id }} {
    position: relative;
    width: 100%;
    text-align: center;
    padding: 0;
  }

  /* BACKGROUND IMAGE WITH AUTO HEIGHT */
  .bg-img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Desktop image visible on desktop */
  .desktop-bg {
    display: block;
  }

  /* Mobile image hidden on desktop */
  .mobile-bg {
    display: none;
  }

  @media(max-width: 768px) {
    .desktop-bg {
      display: none;
    }
    .mobile-bg {
      display: block;
    }
  }

  /* TOP DECOR */
  #celebrate-plate-{{ section.id }} .top-decor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 3;
  }

  /* BOTTOM DECOR */
  #celebrate-plate-{{ section.id }} .bottom-decor {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 3;
  }

  /* CENTER CONTENT */
  #celebrate-plate-{{ section.id }} .content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 550px;
    width: 90%;
    padding: 20px;
    z-index: 5;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 34px;
    font-weight: 700;
    color: #003a17;
    margin-bottom: 12px;
  }

  #celebrate-plate-{{ section.id }} p {
    color: #333;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .cta-btn {
    display: inline-block;
    background: #7ccf32;
    padding: 12px 28px;
    border-radius: 40px;
    color: #fff;
    font-weight: 700;
    text-decoration: none;
  }
</style>


{% schema %}
{
  "name": "Celebrate Plate Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_desktop",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "bg_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "image_picker",
      "id": "top_decor",
      "label": "Top Decorative Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_decor",
      "label": "Bottom Decorative Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "celebrate the little victories"
    },
    {
      "type": "textarea",
      "id": "desc",
      "label": "Description",
      "default": "Add your text here..."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "meet Kidfresh"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Celebrate Plate Section "
    }
  ]
}
{% endschema %}
