/* Animation */
#celebrate-plate-{{ section.id }} .broccoli-image {
  position: absolute;
  bottom: 52%;
  left: -10%;          /* starting hidden */
  width: 19pc;
  height: auto;
  cursor: pointer;
  z-index: 20;
  opacity: 1;
  animation: broccoliMove 4s ease-in-out infinite;
}

/* Stop animation when hovering while out */
#celebrate-plate-{{ section.id }} .broccoli-image.broccoli-out.hover-paused {
  animation: none !important;
  left: -5% !important;
}

/* ANIMATION */
@keyframes broccoliMove {
  0% {
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }

  25% {                /* comes out and stops */
    left: -5%;
    transform: translateX(0);
    rotate: 6deg;
  }

  50% {                /* stay outside */
    left: -5%;
    transform: translateX(0);
    rotate: 6deg;
  }

  75% {                /* goes back in and stops */
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }

  100% {               /* stay inside */
    left: -10%;
    transform: translateX(0);
    rotate: 2deg;
  }
}

