  {% comment %} #celebrate-plate-{{ section.id }} .broccoli-image {
    position: absolute;
    bottom: 52%;
    left: -4%;
    rotate: 2deg;
  } {% endcomment %}

#celebrate-plate-{{ section.id }} .broccoli-image {
    position: absolute;
    bottom: 52%;
    left: 0%;
    width: 17pc;
    height: auto;
    cursor: pointer;
    z-index: 20;
    opacity: 0;
    transform: translateX(-100px);
    transition: transform 0.6s ease, opacity 0.6s ease;
    pointer-events: auto;
    rotate: 6deg;
  }

  {% comment %} #celebrate-plate-{{ section.id }} .broccoli-image {
    position: absolute;
    bottom: 52%;
    left: -4%;
    width: 17pc;
    height: auto;
    cursor: pointer;
    z-index: 20;
    
    animation: broccoliMove 1s ease-in-out infinite alternate;
    /* infinite alternate = moves A→B then B→A smoothly */
}

/* Animation */
@keyframes broccoliMove {
  0% {
    left: -4%;
    transform: translateX(0);
    rotate: 2deg;
    opacity: 1;
  }

  100% {
    left: 0%;
    transform: translateX(-100px);
    rotate: 6deg;
    opacity: 1;
  }
} {% endcomment %}


