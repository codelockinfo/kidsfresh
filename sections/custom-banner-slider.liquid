  /* Animated Broccoli Styles */
  .animated-broccoli-section {
    position: relative;
    overflow: visible;
  }

  .broccoli-image {
    position: absolute;
    bottom: 52%;
    left: -2%;
    width: 14pc;
    height: auto;
    cursor: pointer;
    z-index: 20;
    opacity: 0;
    transform: translateX(-100px);
    transition: transform 0.6s ease, opacity 0.6s ease;
    pointer-events: auto;
  }

  .animated-broccoli-section.animated .broccoli-image {
    opacity: 1;
    {% comment %} transform: translateX(0); {% endcomment %}
  }

  .broccoli-image:hover {
    transform: translateX(20px) scale(1.1);
  }

.broccoli-hover-text {
    position: absolute;
    bottom: 12pc;
    left: 22pc;
    transform: translateX(-50%);
    background: url(https://cdn.shopify.com/s/files/1/0790/5017/8785/files/Untitled_700_x_500_px_1.png?v=1763753734);
    background-size: cover;
    height: 17pc;
    background-repeat: no-repeat;
    width: 23pc;
    background-position: center;
    padding: 65px 72px;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    z-index: 21;
    font-size: 16px;
    font-weight: bold;
    color: #333;
}

  .broccoli-image:hover .broccoli-hover-text {
    opacity: 1;
    visibility: visible;
  }

  .animated-broccoli-section .banner__heading {
    font-size: 84px;
    line-height: 86px;
    font-weight: 700;
    color: #0F4735;
  }

  .animated-broccoli-section .banner__text span {
    font-size: 28px !important;
    font-weight: 400;
    line-height: 43px;
  }
  section#shopify-section-template--20805897552097__custom_liquid_hdLUVM .color-scheme-1.gradient {
    background: transparent;
   }
  @media screen and (max-width: 768px) {
    .animated-broccoli-section .banner__heading {
      font-size: 42px !important;
      line-height: 46px !important;
    }
    .animated-broccoli-section .banner__text span {
      font-size: 22px !important;
      line-height: 32px !important;
    }
    .broccoli-image {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .broccoli-image {
      width: clamp(150px, 40vw, 200px);
      left: 0%;
      bottom: 3%;
    }
    .broccoli-hover-text {
    display: none;
}

    .broccoli-hover-text {
      font-size: 14px;
      padding: 8px 16px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1024px) {
    .broccoli-image {
      width: 250px;
      left: 3%;
    }
  }
