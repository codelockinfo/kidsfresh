<section id="celebrate-plate-{{ section.id }}" class="celebrate-plate-section">

  <!-- DESKTOP BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_desktop %}
    <img 
      class="bg-img desktop-bg" 
      src="{{ section.settings.bg_desktop | img_url: 'master' }}"
      alt="background">
  {% endif %}

  <!-- MOBILE BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_mobile %}
    <img 
      class="bg-img mobile-bg" 
      src="{{ section.settings.bg_mobile | img_url: 'master' }}"
      alt="background">
  {% endif %}

  <!-- TOP DECOR -->
  {% if section.settings.top_decor != blank %}
    <img class="top-decor" src="{{ section.settings.top_decor | img_url: 'master' }}">
  {% endif %}

  <!-- CONTENT -->
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.desc }}</p>

    {% if section.settings.btn_text != blank %}
      <a href="{{ section.settings.btn_link }}" class="cta-btn button">
        <span>{{ section.settings.btn_text }}</span>
      </a>
    {% endif %}
  </div>

  <!-- BOTTOM DECOR -->
  {% if section.settings.bottom_decor != blank %}
    <img class="bottom-decor" src="{{ section.settings.bottom_decor | img_url: 'master' }}">
  {% endif %}

</section>


<style>
  /* SECTION WRAPPER */
  #celebrate-plate-{{ section.id }} {
    position: relative;
    width: 100%;
    text-align: center;
    padding: 110px 0 0;
  }

  /* BACKGROUND IMAGE WITH AUTO HEIGHT */
  .bg-img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Desktop image visible on desktop */
  .desktop-bg {
    display: block;
  }

  /* Mobile image hidden on desktop */
  .mobile-bg {
    display: none;
  }

  @media(max-width: 768px) {
    .desktop-bg {
      display: none;
    }
    .mobile-bg {
      display: block;
    }
  }

  /* TOP DECOR */
  #celebrate-plate-{{ section.id }} .top-decor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: -1;
    background-color: #F1EAD9;
  }

  /* BOTTOM DECOR */
  #celebrate-plate-{{ section.id }} .bottom-decor {
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    z-index: 3;
  }

  /* CENTER CONTENT */
  #celebrate-plate-{{ section.id }} .content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 36%;
    width: 90%;
    padding: 20px;
    z-index: 5;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 84px;
    line-height: 86px;
    font-weight: 700;
    color: #003a17;
    margin-bottom: 12px;
    font-family: var(--font-family);
  }

  #celebrate-plate-{{ section.id }} p {
    color: #333;
    line-height: 43px;
    font-size: 28px;
    font-family: var(--font-family);
  }

  #celebrate-plate-{{ section.id }} .button{
  background: transparent!important;
  color: #0F4735;
  font-family: var(--font-family);
  font-size: 30px;
  font-weight: 600;
  line-height: 44px;
  text-decoration: none;
  box-shadow: none;
  cursor: pointer;
  transition: transform .2s ease, box-shadow .2s ease;
  text-align: center;
  border-radius: 35px;
  padding: 8px 34px;
  border: none;
  text-transform: lowercase;
    transform: none !important;
}

#celebrate-plate-{{ section.id }} .button:before {
   background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_23_2.png?v=1764592651);
  background-size: 100% 100%;
  z-index: 2;
}

#celebrate-plate-{{ section.id }} .button span{
  z-index: 3;
}

#celebrate-plate-{{ section.id }} .button:after {
  content: '';
   background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_25.png?v=1764592665);
  background-size: 100% 100%;
  padding: 8px 34px;
  bottom: -5px;
  z-index: 1;
  box-shadow: none;
}


#celebrate-plate-{{ section.id }} .button:hover:before {
  background: url(https://cdn.shopify.com/s/files/1/0577/3957/5488/files/Vector_23_3.png?v=1764592664) !important;
  background-size: 100% 100% !important;
}

#celebrate-plate-{{ section.id }} .button:hover:after{
  bottom: -5px;
  box-shadow: none;
}
@media (max-width: 768px) {
  #celebrate-plate-{{ section.id }} .button {
    font-size: 20px;
    line-height: 33px;
  }
}

@media (min-width: 1135px) and (max-width: 1558px) {
    #celebrate-plate-{{ section.id }} {
    padding: 80px 0 0;
  }
}
@media (min-width: 847px) and (max-width: 1134px) {
    #celebrate-plate-{{ section.id }} {
    padding: 60px 0 0;
  }
}

@media (min-width: 769px) and (max-width: 848px) {
    #celebrate-plate-{{ section.id }} {
    padding: 55px 0 0;
  }
}

@media (min-width: 500px) and (max-width: 768px) {
    #celebrate-plate-{{ section.id }} {
    padding: 15px 0 0;
  }
}

@media  (max-width: 499px) {
    #celebrate-plate-{{ section.id }} {
    padding: 10px 0 0;
  }
}

@media (max-width: 551px) {

  #celebrate-plate-{{ section.id }} .content {
    max-width: 100% !important;
    width: 100% !important;
    padding: 10px !important;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 42px;
    line-height: 46px;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 20px;
    line-height: 1.3;
  }
}
@media (min-width: 552px) and (max-width: 768px) {

  #celebrate-plate-{{ section.id }} .content {
    max-width: 70% !important;
    width: 70% !important;
    padding: 15px !important;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 58px !important;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 24px;
  }

  .cta-btn {
    font-size: 20px !important;
    padding: 14px 28px !important;
  }
}
@media (min-width: 769px) and (max-width: 991px) {

  #celebrate-plate-{{ section.id }} .content {
    max-width: 50% !important;
    width: 70% !important;
    padding: 15px !important;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 42px;
    line-height: 46px;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 16px;
  }
}
@media (min-width: 992px) and (max-width: 1200px) {

  #celebrate-plate-{{ section.id }} .content {
    max-width: 47% !important;
    width: 70% !important;
    padding: 15px !important;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 64px !important;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 18px;
  }
}
@media (min-width: 1201px) and (max-width: 1400px) {

  #celebrate-plate-{{ section.id }} .content {
    max-width: 47% !important;
    width: 70% !important;
    padding: 15px !important;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 70px !important;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 25px;
  }
}
@media (min-width: 1401px) and (max-width: 1500px) {
  #celebrate-plate-{{ section.id }} h2 {
    font-size: 72px;
  }

  #celebrate-plate-{{ section.id }} p {
    font-size: 25px;
  }
}
</style>


{% schema %}
{
  "name": "Celebrate Plate Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_desktop",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "bg_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "image_picker",
      "id": "top_decor",
      "label": "Top Decorative Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_decor",
      "label": "Bottom Decorative Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "celebrate the little victories"
    },
    {
      "type": "textarea",
      "id": "desc",
      "label": "Description",
      "default": "Add your text here..."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "meet Kidfresh"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Celebrate Plate Section "
    }
  ]
}
{% endschema %}
