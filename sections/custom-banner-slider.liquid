<section id="celebrate-plate-{{ section.id }}" class="celebrate-plate-section">

  <!-- DESKTOP BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_desktop %}
    <img 
      class="bg-img desktop-bg" 
      src="{{ section.settings.bg_desktop | img_url: 'master' }}"
      alt="background">
  {% endif %}

  <!-- MOBILE BACKGROUND IMAGE (AUTO HEIGHT) -->
  {% if section.settings.bg_mobile %}
    <img 
      class="bg-img mobile-bg" 
      src="{{ section.settings.bg_mobile | img_url: 'master' }}"
      alt="background">
  {% endif %}

    {%- if section.settings.broccoli_image != blank -%}
    <div class="broccoli-image">
      <img src="{{ section.settings.broccoli_image | img_url: 'master' }}" alt="Animated Broccoli" loading="lazy" style="width: 100%; height: auto;">
      {%- if section.settings.hover_text != blank -%}
        <div class="broccoli-hover-text">{{ section.settings.hover_text }}</div>
      {%- endif -%}
    </div>
  {%- endif -%}

  <!-- TOP DECOR -->
  {% if section.settings.top_decor != blank %}
    <img class="top-decor" src="{{ section.settings.top_decor | img_url: 'master' }}">
  {% endif %}

  <!-- CONTENT -->
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.desc }}</p>

    {% if section.settings.btn_text != blank %}
      <a href="{{ section.settings.btn_link }}" class="cta-btn button">
        <span>{{ section.settings.btn_text }}</span>
      </a>
    {% endif %}
  </div>

  <!-- BOTTOM DECOR -->
  {% if section.settings.bottom_decor != blank %}
    <img class="bottom-decor" src="{{ section.settings.bottom_decor | img_url: 'master' }}">
  {% endif %}

</section>


