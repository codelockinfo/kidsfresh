<section id="celebrate-plate-{{ section.id }}" class="celebrate-plate-section">

  <!-- BACKGROUND WRAPPER -->
  <div class="bg-area">
  </div>

  <!-- TOP DECOR -->
  {% if section.settings.top_decor != blank %}
    <img class="top-decor" src="{{ section.settings.top_decor | img_url: 'master' }}">
  {% endif %}

  <!-- CONTENT -->
  <div class="content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.desc }}</p>

    {% if section.settings.btn_text != blank %}
      <a href="{{ section.settings.btn_link }}" class="cta-btn">
        {{ section.settings.btn_text }}
      </a>
    {% endif %}
  </div>

  <!-- BOTTOM DECOR -->
  {% if section.settings.bottom_decor != blank %}
    <img class="bottom-decor" src="{{ section.settings.bottom_decor | img_url: 'master' }}">
  {% endif %}

</section>


<style>
  #celebrate-plate-{{ section.id }} {
    position: relative;
    width: 100%;
    padding: 80px 20px;
    text-align: center;
  }

  /* MAIN BACKGROUND */
  #celebrate-plate-{{ section.id }} .bg-area {
    width: 100%;
    height: 480px;
    background-size: cover;
    background-position: center;
    background-image: url('{{ section.settings.bg_desktop | img_url: "master" }}');
  }

  /* MOBILE BG CHANGE */
  @media(max-width: 768px){
    #celebrate-plate-{{ section.id }} .bg-area {
      background-image: url('{{ section.settings.bg_mobile | img_url: "master" }}');
      height: 380px;
    }
  }

  /* TOP & BOTTOM DECOR */
  #celebrate-plate-{{ section.id }} .top-decor {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
  }
  #celebrate-plate-{{ section.id }} .bottom-decor {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
  }

  /* CENTER CONTENT */
  #celebrate-plate-{{ section.id }} .content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 550px;
  }

  #celebrate-plate-{{ section.id }} h2 {
    font-size: 34px;
    font-weight: 700;
    color: #003a17;
    margin-bottom: 12px;
  }
  #celebrate-plate-{{ section.id }} p {
    color: #333;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .cta-btn {
    display: inline-block;
    background: #7ccf32;
    padding: 12px 28px;
    border-radius: 40px;
    color: #fff;
    font-weight: 700;
    text-decoration: none;
  }
</style>


{% schema %}
{
  "name": "Celebrate Plate Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_desktop",
      "label": "Desktop Background Image"
    },
    {
      "type": "image_picker",
      "id": "bg_mobile",
      "label": "Mobile Background Image"
    },
    {
      "type": "image_picker",
      "id": "top_decor",
      "label": "Top Decorative Image"
    },
    {
      "type": "image_picker",
      "id": "bottom_decor",
      "label": "Bottom Decorative Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "celebrate the little victories"
    },
    {
      "type": "textarea",
      "id": "desc",
      "label": "Description",
      "default": "Add your text here..."
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "meet Kidfresh"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Celebrate Plate Section"
    }
  ]
}
{% endschema %}
