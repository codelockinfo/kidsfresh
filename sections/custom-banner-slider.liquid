<script>
document.addEventListener('DOMContentLoaded', function() {
    const broccoliImage = document.querySelector('#celebrate-plate-{{ section.id }} .broccoli-image');
    if (!broccoliImage) return;

    // Track animation progress
    let animationStartTime = Date.now();
    const animationDuration = 4000; // 4 seconds
    let isHovered = false;
    let wasOutWhenHovered = false;
    
    function checkBroccoliPosition() {
        const elapsed = (Date.now() - animationStartTime) % animationDuration;
        const progress = (elapsed / animationDuration) * 100;
        const isCurrentlyOut = progress >= 25 && progress <= 50;
        
        // If hovering and broccoli becomes out, pause animation
        if (isHovered && isCurrentlyOut && !broccoliImage.classList.contains('hover-paused')) {
            broccoliImage.style.animationPlayState = 'paused';
            broccoliImage.style.left = '-5%';
            broccoliImage.classList.add('hover-paused');
            broccoliImage.dataset.pausedAt = elapsed;
            broccoliImage.dataset.pauseTime = Date.now();
        }
        
        // Don't update class if hovering and broccoli was out
        if (isHovered && wasOutWhenHovered) {
            // Keep the broccoli-out class when hovering
            broccoliImage.classList.add('broccoli-out');
            requestAnimationFrame(checkBroccoliPosition);
            return;
        }
        
        // Broccoli is "out" between 25% and 50% of animation
        if (isCurrentlyOut) {
            broccoliImage.classList.add('broccoli-out');
        } else {
            // Only remove if not hovering
            if (!isHovered) {
                broccoliImage.classList.remove('broccoli-out');
            }
        }
        
        requestAnimationFrame(checkBroccoliPosition);
    }
    
    // Handle hover start
    broccoliImage.addEventListener('mouseenter', function() {
        isHovered = true;
        wasOutWhenHovered = broccoliImage.classList.contains('broccoli-out');
        if (wasOutWhenHovered) {
            // Pause animation but keep it running (preserves state)
            broccoliImage.style.animationPlayState = 'paused';
            broccoliImage.style.left = '-5%';
            broccoliImage.classList.add('hover-paused');
            // Store current animation progress
            const elapsed = (Date.now() - animationStartTime) % animationDuration;
            broccoliImage.dataset.pausedAt = elapsed;
            broccoliImage.dataset.pauseTime = Date.now();
        }
    });
    
    // Handle hover end
    broccoliImage.addEventListener('mouseleave', function() {
        isHovered = false;
        wasOutWhenHovered = false;
        broccoliImage.classList.remove('hover-paused');
        
        // Continue from where it paused
        if (broccoliImage.dataset.pausedAt && broccoliImage.dataset.pauseTime) {
            const pausedAt = parseFloat(broccoliImage.dataset.pausedAt);
            const pauseTime = parseFloat(broccoliImage.dataset.pauseTime);
            const pauseDuration = Date.now() - pauseTime;
            
            // Remove inline styles to restore CSS animation
            broccoliImage.style.animationPlayState = '';
            broccoliImage.style.left = '';
            
            // Update animation start time to account for pause duration
            // This ensures our tracking continues from where it paused
            animationStartTime = Date.now() - pausedAt - pauseDuration;
            
            // Clean up
            delete broccoliImage.dataset.pausedAt;
            delete broccoliImage.dataset.pauseTime;
        } else {
            // If no pause data, just restore normally
            broccoliImage.style.animationPlayState = '';
            broccoliImage.style.left = '';
        }
    });
    
    // Start checking position immediately
    checkBroccoliPosition();
    
    // Reset animation start time when animation restarts
    broccoliImage.addEventListener('animationiteration', function() {
        if (!isHovered) {
            animationStartTime = Date.now();
        }
    });
    
    // Also handle animation start event for better synchronization
    broccoliImage.addEventListener('animationstart', function() {
        if (!isHovered) {
            animationStartTime = Date.now();
        }
    });
});
</script>

