<style>
  .product-banner-section {
    position: relative;
    width: 100%;
    min-height: 600px;
    padding: 60px 40px;
    overflow: hidden;
    display: flex;
    align-items: center;
    background: linear-gradient(180deg, #1a5d3f 0%, #6fb84a 100%);
  }

  {%- if st.background_pattern != blank -%}
  .product-banner-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('{{ st.background_pattern | image_url: width: 1920 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.15;
    z-index: 0;
  }
  {%- endif -%}

  .product-banner-container {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .product-banner-content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .product-banner-label {
    font-size: 24px;
    font-weight: 700;
    color: #F89821;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 10px;
    font-family: var(--font-family);
  }

  .product-banner-title {
    font-size: 56px;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
    margin: 0;
    font-family: var(--font-family);
    text-transform: none;
  }

  .product-banner-description {
    font-size: 18px;
    line-height: 1.6;
    color: #ffffff;
    margin: 20px 0;
    font-family: var(--font-family);
  }

  .product-banner-disclaimer {
    font-size: 12px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 10px;
    font-family: var(--font-family);
  }

  .product-banner-buttons {
    display: flex;
    gap: 20px;
    margin-top: 10px;
    flex-wrap: wrap;
  }

  .product-banner-btn {
    padding: 14px 32px;
    border-radius: 30px;
    font-size: 18px;
    font-weight: 600;
    text-decoration: none;
    text-transform: lowercase;
    font-family: var(--font-family);
    transition: transform 0.2s ease, opacity 0.2s ease;
    display: inline-block;
    border: none;
    cursor: pointer;
  }

  .product-banner-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .product-banner-btn--primary {
    background-color: #8DC13F;
    color: #ffffff;
  }

  .product-banner-btn--secondary {
    background-color: #F89821;
    color: #ffffff;
  }

  .product-banner-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-banner-image {
    position: relative;
    max-width: 100%;
    height: auto;
    z-index: 2;
  }

  .product-banner-image img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
  }

  .product-badge {
    position: absolute;
    background-color: #ffffff;
    border-radius: 20px;
    padding: 8px 16px;
    font-size: 12px;
    font-weight: 600;
    color: #0F4735;
    font-family: var(--font-family);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    z-index: 3;
    white-space: nowrap;
  }

  .product-badge--yellow {
    background-color: #8DC13F;
    color: #ffffff;
  }

  .product-badge--green {
    background-color: #8DC13F;
    color: #ffffff;
  }

  .product-badge--white {
    background-color: #ffffff;
    color: #0F4735;
  }

  .product-badge-1 {
    top: 10%;
    left: -10%;
  }

  .product-badge-2 {
    top: 20%;
    right: -5%;
  }

  .product-badge-3 {
    bottom: 30%;
    left: -15%;
  }

  .product-badge-4 {
    bottom: 20%;
    right: -10%;
  }

  .product-badge-5 {
    top: 5%;
    right: 5%;
  }

  .product-badge-6 {
    bottom: 10%;
    right: 10%;
  }

  .leaf-icon-bottom {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
  }

  .leaf-icon-bottom svg {
    width: 40px;
    height: 40px;
    fill: #1a5d3f;
    opacity: 0.6;
  }

  @media screen and (max-width: 1024px) {
    .product-banner-container {
      gap: 40px;
    }

    .product-banner-title {
      font-size: 48px;
    }

    .product-banner-description {
      font-size: 16px;
    }
  }

  @media screen and (max-width: 768px) {
    .product-banner-section {
      padding: 40px 20px;
      min-height: auto;
    }

    .product-banner-container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .product-banner-content {
      order: 1;
      text-align: center;
    }

    .product-banner-image-wrapper {
      order: 2;
    }

    .product-banner-label {
      font-size: 20px;
    }

    .product-banner-title {
      font-size: 36px;
    }

    .product-banner-description {
      font-size: 16px;
    }

    .product-banner-buttons {
      justify-content: center;
    }

    .product-banner-btn {
      padding: 12px 28px;
      font-size: 16px;
    }

    .product-badge {
      font-size: 10px;
      padding: 6px 12px;
    }

    .product-badge-1,
    .product-badge-2,
    .product-badge-3,
    .product-badge-4 {
      position: relative;
      top: auto;
      left: auto;
      right: auto;
      bottom: auto;
      margin: 5px;
      display: inline-block;
    }
  }

  @media screen and (max-width: 480px) {
    .product-banner-section {
      padding: 30px 15px;
    }

    .product-banner-title {
      font-size: 28px;
    }

    .product-banner-buttons {
      flex-direction: column;
      width: 100%;
    }

    .product-banner-btn {
      width: 100%;
      text-align: center;
    }
  }
</style>

<section class="product-banner-section" data-section-type="product-banner" data-section-id="{{ section.id }}">
  <div class="product-banner-container">
    <!-- Left Content -->
    <div class="product-banner-content">
      {% if st.label != blank %}
        <div class="product-banner-label">{{ st.label }}</div>
      {% endif %}

      {% if st.title != blank %}
        <h2 class="product-banner-title">{{ st.title }}</h2>
      {% endif %}

      {% if st.description != blank %}
        <div class="product-banner-description">{{ st.description }}</div>
      {% endif %}

      {% if st.disclaimer != blank %}
        <div class="product-banner-disclaimer">{{ st.disclaimer }}</div>
      {% endif %}

      <div class="product-banner-buttons">
        {% if st.button_1_text != blank %}
          <a href="{{ st.button_1_link | default: '#' }}" class="product-banner-btn product-banner-btn--primary">
            {{ st.button_1_text }}
          </a>
        {% endif %}

        {% if st.button_2_text != blank %}
          <a href="{{ st.button_2_link | default: '#' }}" class="product-banner-btn product-banner-btn--secondary">
            {{ st.button_2_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Right Product Image -->
    <div class="product-banner-image-wrapper">
      {% if st.product_image != blank %}
        <div class="product-banner-image">
          <img
            src="{{ st.product_image | image_url: width: 800 }}"
            alt="{{ st.product_image.alt | escape }}"
            loading="lazy"
          >

          <!-- Badge 1 -->
          {% if st.badge_1_text != blank %}
            <div class="product-badge product-badge-1 {% if st.badge_1_style == 'yellow' %}product-badge--yellow{% elsif st.badge_1_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_1_text }}
            </div>
          {% endif %}

          <!-- Badge 2 -->
          {% if st.badge_2_text != blank %}
            <div class="product-badge product-badge-2 {% if st.badge_2_style == 'yellow' %}product-badge--yellow{% elsif st.badge_2_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_2_text }}
            </div>
          {% endif %}

          <!-- Badge 3 -->
          {% if st.badge_3_text != blank %}
            <div class="product-badge product-badge-3 {% if st.badge_3_style == 'yellow' %}product-badge--yellow{% elsif st.badge_3_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_3_text }}
            </div>
          {% endif %}

          <!-- Badge 4 -->
          {% if st.badge_4_text != blank %}
            <div class="product-badge product-badge-4 {% if st.badge_4_style == 'yellow' %}product-badge--yellow{% elsif st.badge_4_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_4_text }}
            </div>
          {% endif %}

          <!-- Badge 5 -->
          {% if st.badge_5_text != blank %}
            <div class="product-badge product-badge-5 {% if st.badge_5_style == 'yellow' %}product-badge--yellow{% elsif st.badge_5_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_5_text }}
            </div>
          {% endif %}

          <!-- Badge 6 -->
          {% if st.badge_6_text != blank %}
            <div class="product-badge product-badge-6 {% if st.badge_6_style == 'yellow' %}product-badge--yellow{% elsif st.badge_6_style == 'green' %}product-badge--green{% else %}product-badge--white{% endif %}">
              {{ st.badge_6_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Bottom Leaf Icon -->
  <div class="leaf-icon-bottom">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
    </svg>
  </div>
</section>

