{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .image-grid-container-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media screen and (max-width: 749px) {
    .image-grid-container-{{ section.id }} {
      grid-template-columns: 1fr;
     
    }
  }

  .image-grid-item-{{ section.id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    aspect-ratio: {{ section.settings.aspect_ratio }};
  }

  .image-grid-item-{{ section.id }} a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .image-grid-item-{{ section.id }} a:hover img {
    transform: scale(1.05);
  }

  .image-grid-item-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }
.image-grid-heading{
    margin:0px;
    padding-bottom:40px;
    display:flex;
    justify-content:center;
}
  .image-grid-text-overlay-{{ section.id }} {
    position: absolute;
    padding: 1rem;
    color: {{ section.settings.text_color }};
    z-index: 2;
    {% if section.settings.text_background_enabled %}
    padding: 1rem 1.5rem;
    border-radius: 8px;
    {% endif %}
  }

  {%- for block in section.blocks -%}
    .image-grid-item-{{ section.id }}-{{ block.id }} .image-grid-text-overlay-{{ section.id }} {
      {% case block.settings.text_position %}
        {% when 'top-left' %}
          top: {{ block.settings.text_offset_top }}%;
          left: {{ block.settings.text_offset_left }}%;
          transform: translate(0, 0);
        {% when 'top-center' %}
          top: {{ block.settings.text_offset_top }}%;
          left: 50%;
          transform: translate(-50%, 0);
        {% when 'top-right' %}
          top: {{ block.settings.text_offset_top }}%;
          right: {{ block.settings.text_offset_right }}%;
          transform: translate(0, 0);
        {% when 'middle-left' %}
          top: 50%;
          left: {{ block.settings.text_offset_left }}%;
          transform: translate(0, -50%);
        {% when 'middle-center' %}
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
        {% when 'middle-right' %}
          top: 50%;
          right: {{ block.settings.text_offset_right }}%;
          transform: translate(0, -50%);
        {% when 'bottom-left' %}
          bottom: {{ block.settings.text_offset_bottom }}%;
          left: {{ block.settings.text_offset_left }}%;
          transform: translate(0, 0);
        {% when 'bottom-center' %}
          bottom: {{ block.settings.text_offset_bottom }}%;
          left: 50%;
          transform: translate(-50%, 0);
        {% when 'bottom-right' %}
          bottom: {{ block.settings.text_offset_bottom }}%;
          right: {{ block.settings.text_offset_right }}%;
          transform: translate(0, 0);
      {% endcase %}
    }

    .image-grid-item-{{ section.id }}-{{ block.id }} .image-grid-text-overlay-{{ section.id }} h3 {
      font-size: {{ block.settings.heading_size }}px;
      font-weight: {{ block.settings.heading_weight }};
      margin: 0 0 0.5rem 0;
      line-height: 1.2;
    }

    .image-grid-item-{{ section.id }}-{{ block.id }} .image-grid-text-overlay-{{ section.id }} p {
      font-size: {{ block.settings.text_size }}px;
      margin: 0;
      line-height: 1.4;
    }

    @media screen and (max-width: 749px) {
      .image-grid-item-{{ section.id }}-{{ block.id }} .image-grid-text-overlay-{{ section.id }} h3 {
        font-size: {{ block.settings.heading_size_mobile }}px;
      }

      .image-grid-item-{{ section.id }}-{{ block.id }} .image-grid-text-overlay-{{ section.id }} p {
        font-size: {{ block.settings.text_size_mobile }}px;
      }
    }
  {%- endfor -%}
{%- endstyle -%}

<div class="image-grid-section-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="image-grid-heading inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="image-grid-container-{{ section.id }}">
      {%- for block in section.blocks -%}
        <div
          class="image-grid-item-{{ section.id }} image-grid-item-{{ section.id }}-{{ block.id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          {%- if block.settings.link_url != blank -%}
            <a href="{{ block.settings.link_url }}" {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
          {%- endif -%}
          
          {%- if block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 2000
              | image_tag:
                loading: 'lazy',
                widths: '375, 550, 750, 1100, 1500, 2000',
                sizes: '(min-width: 750px) calc((100vw - 100px) / 2), calc(100vw - 60px)'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}

          {%- if block.settings.heading != blank or block.settings.text != blank -%}
            <div class="image-grid-text-overlay-{{ section.id }}">
              {%- if block.settings.heading != blank -%}
                <h3>{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <p>{{ block.settings.text }}</p>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if block.settings.link_url != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

